a = [];
assert_istrue(isempty(a));
assert_isequal(size(a), [0 0]);
R = a == [];
assert_istrue(isempty(R));
assert_isequal(size(R), [0 0]);
assert_isequal(class(a == []), 'logical');
R = (1 == []);
assert_istrue(isempty(R));
assert_isequal(size(R), [0 0]);
assert_isequal(class(1 == []), 'logical');
