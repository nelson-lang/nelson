  <language>en_US</language>
  <keyword>clear</keyword>
  <short_description>Remove variable from workspace.</short_description>

  <syntax>
    <syntax_item>clear</syntax_item>
    <syntax_item>clear variable_name</syntax_item>
    <syntax_item>clear global</syntax_item>
    <syntax_item>clear all</syntax_item>
    <syntax_item>clear variables</syntax_item>
    <syntax_item>clear functions</syntax_item>
    <syntax_item>clear variable_name_1 ... variable_name_N</syntax_item>
    <syntax_item>clear global variable_name</syntax_item>

  </syntax>
  

  <param_input>
    <param_input_item>
      <param_name>variable_name</param_name>
      <param_description>a string: variable name.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>global</param_name>
      <param_description>clears all global variables.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>all</param_name>
      <param_description>clears all variables in all scopes</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>variables</param_name>
      <param_description>clears all variables in current scope.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>functions</param_name>
      <param_description>clears cache of macros functions and associated persistent variables.</param_description>
    </param_input_item>
  </param_input>

  <description>
    <p><b>clear</b> is used to remove variable given by its name.</p>
    <p><b>clear</b> can also delete handle object if a function handle_TYPE_clear is defined.</p>
  </description>

  <used_function></used_function>
