  <language>en_US</language>
  <keyword>isvar</keyword>
  <short_description>Check for the existence of an variable.</short_description>

  <syntax>
    <syntax_item>tf = isvar(varname)</syntax_item>
    <syntax_item>tf = isvar(scope, varname)</syntax_item>
  </syntax>
  

  <param_input>
    <param_input_item>
      <param_name>scope</param_name>
      <param_description
      >a string: 'global', 'base', 'caller', 'local'.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>varname</param_name>
      <param_description>a string: variable name.</param_description>
    </param_input_item>
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>tf</param_name>
      <param_description>a logical: true if varname exists.</param_description>
    </param_output_item>
  </param_output>


  <description><p><b>isvar</b> checks for the existence of an variable.</p>
  </description>

  <used_function />
  <bibliography />

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[isvar('A')
A = 3
isvar('A')
isvar('global','B')
global B
isvar('global','B')]]>
    </example_item_data>
  </example_item>

</examples>

