//=============================================================================
A = sparse(eye(4, 5));
A(2, [5 3 1]) = 3;
[a, b, c, d, e] = IJV(A);
ref_a = [1; 2; 2; 2; 3; 4; 2];  
ref_b = [1; 1; 2; 3; 3; 4; 5];  
ref_c = [1; 3; 1; 3; 1; 1; 3.000]; 
ref_d = 4;
ref_e = 5;
assert_isequal(a, ref_a);
assert_isequal(b, ref_b);
assert_isequal(c, ref_c);
assert_isequal(d, ref_d);
assert_isequal(e, ref_e); 
