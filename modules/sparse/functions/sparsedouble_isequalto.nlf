function r = sparsedouble_isequalto(a, b)
	if issparse(b)
		if ~isequalto(size(a), size(b))
			r = false;
		else
			[IA, JA, VA] = IJV(a);
			[IB, JB, VB] = IJV(b);
			r = isequalto(IA, IB) && isequalto(JA, JB) && isequalto(VA, VB);
		end
	else
		r = false;
	end
endfunction
