                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[unix("cd c:/ " + cmdsep() + " nelson")]]></example_item_data>
            </example_item>
        </examples>
