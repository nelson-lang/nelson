    <language>fr_FR</language>
    <keyword>warning</keyword>
    <short_description>Afficher un message d'avertissement.</short_description>
    <syntax>
        <syntax_item>warning()</syntax_item>
        <syntax_item>warning(msg)</syntax_item>
        <syntax_item>warning(id, msg)</syntax_item>
        <syntax_item>warning(state)</syntax_item>
        <syntax_item>warning(state, id)</syntax_item>
        <syntax_item>st = warning()</syntax_item>
        <syntax_item>warning(st)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>id</param_name>
            <param_description
      >une chaîne : identifiant pour l'avertissement.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>msg</param_name>
            <param_description
      >une chaîne : message d'avertissement.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>state</param_name>
            <param_description
      >une chaîne : 'on', 'off', 'aserror', 'all' ou 'query'.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>st</param_name>
            <param_description
      >une structure : définir les paramètres d'avertissement.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>st</param_name>
            <param_description
      >une structure : paramètres d'avertissement.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p><b>warning</b> affiche un message d'avertissement.</p>
        <p><b>warning('')</b> réinitialise l'état de lastwarn.</p>
    </description>
            <used_function />
            <bibliography />
            <examples>
                <example_item>
                    <example_item_type>nelson</example_item_type>
                    <example_item_description />
                    <example_item_data
      ><![CDATA[warning('your warning message.')]]></example_item_data>
                </example_item>
                <example_item>
                    <example_item_type>nelson</example_item_type>
                    <example_item_description />
                    <example_item_data
      ><![CDATA[warning('on', 'myModule:identifier');
warning('myModule:identifier', 'my message 1 on');
warning('off', 'myModule:identifier');
warning('myModule:identifier', 'my message 2 off');
warning('aserror', 'myModule:identifier');
warning('myModule:identifier', 'my message 3 as error');

]]></example_item_data>
                </example_item>
            </examples>
