  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
      ><![CDATA[ME = MException('nelson:identifier', 'your error message.')
throw(ME)]]></example_item_data>
    </example_item>
  </examples>
