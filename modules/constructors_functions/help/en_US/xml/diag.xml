	<language>en_US</language>
	<keyword>diag</keyword>
	<short_description
  >Get diagonal elements of matrix or create diagonal matrix.</short_description>

	<syntax>
		<syntax_item>D = diag(V)</syntax_item>
		<syntax_item>X = diag(A)</syntax_item>
		<syntax_item>D = diag(V, k)</syntax_item>
		<syntax_item>X = diag(A, k)</syntax_item>

	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>V</param_name>
			<param_description>Diagonal elements</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>A</param_name>
			<param_description>Input matrix</param_description>
		</param_input_item>
	</param_input>

	<param_output>
		<param_output_item>
			<param_name>D</param_name>
			<param_description>vector</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>X</param_name>
			<param_description>matrix</param_description>
		</param_output_item>

	</param_output>

	<description><p><b
      >diag</b> returns diagonal elements of matrix or create diagonal matrix.</p>
</description>

	<used_function />
	<bibliography />
	

<examples>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
