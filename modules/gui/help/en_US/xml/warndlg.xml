    <language>en_US</language>
    <keyword>helpdlg</keyword>
    <short_description>Creates a warning dialog box.</short_description>
    <syntax>
        <syntax_item>h = warndlg()</syntax_item>
        <syntax_item>h = warndlg(text_warning)</syntax_item>
        <syntax_item>h = warndlg(text_warning, title)</syntax_item>
        <syntax_item>h = warndlg(text_warning, title, 'on')</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>text_warning</param_name>
            <param_description
      >a string or a cell of string: the warning message.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>title</param_name>
            <param_description
      >a string: the title of the dialog box.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>h</param_name>
            <param_description>a QObject handle.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>errordlg</b> creates an warning dialog box.</p>
            <p>
                <b
      >h = warndlg(text_warning, title, 'on')</b> specifies whether to replace an existing dialog box having the same name.</p>
            </description>
            <used_function />
            <bibliography />
            <examples>
                <example_item>
                    <example_item_type>nelson</example_item_type>
                    <example_item_description />
                    <example_item_data
        runnable="adv-cli"
      ><![CDATA[h = warndlg()]]></example_item_data>
                </example_item>
                <example_item>
                    <example_item_type>nelson</example_item_type>
                    <example_item_description />
                    <example_item_data
        runnable="adv-cli"
      ><![CDATA[h = warndlg('help string')]]></example_item_data>
                </example_item>
                <example_item>
                    <example_item_type>nelson</example_item_type>
                    <example_item_description />
                    <example_item_data
        runnable="adv-cli"
      ><![CDATA[h = warndlg('help string', 'dialog title')]]></example_item_data>
                </example_item>
                <example_item>
                    <example_item_type>nelson</example_item_type>
                    <example_item_description />
                    <example_item_data
        runnable="adv-cli"
      ><![CDATA[h = warndlg('help string', 'dialog title')
h = warndlg('help string', 'dialog title', 'on')]]></example_item_data>
                </example_item>
            </examples>
