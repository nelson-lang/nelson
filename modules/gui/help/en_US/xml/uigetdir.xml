	<language>en_US</language>
	<keyword>uigetdir</keyword>
	<short_description>Opens dialog box to select a directory.</short_description>

	<syntax>
		<syntax_item>dir_ans = uigetdir()</syntax_item>
		<syntax_item>dir_ans = uigetdir(path)</syntax_item>
		<syntax_item>dir_ans = uigetdir(path, title)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>path</param_name>
			<param_description>a string: initial path</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>title</param_name>
			<param_description>a string: title of the dialog box</param_description>
		</param_input_item>
	</param_input>

	<param_output>

		<param_output_item>
			<param_name>dir_ans</param_name>
			<param_description
      >a string (returned path) or 0 if dialogbox is canceled</param_description>
		</param_output_item>
	</param_output>

	<description><p><b
      >uigetdir</b> opens a dialog box for selecting a directory.</p>
	<p
    >If path is wrong or not given, the current working directory will be used.</p>
</description>


