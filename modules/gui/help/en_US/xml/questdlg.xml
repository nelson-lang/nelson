  <language>en_US</language>
  <keyword>questdlg</keyword>
  <short_description>Creates a question dialog box.</short_description>

  <syntax>
  <syntax_item>buttonname = questdlg(question)</syntax_item>
  <syntax_item>buttonname = questdlg(question, title)</syntax_item>
  <syntax_item>buttonname = questdlg(question, title, default)</syntax_item>
  <syntax_item
    >buttonname = questdlg(question, title, text1, default)</syntax_item>
  <syntax_item
    >buttonname = questdlg(question, title, text1, text2, default)</syntax_item>
  <syntax_item
    >buttonname = questdlg(question, title, text1, text2, text3, default)</syntax_item>
  </syntax>
  
  <param_input>

    <param_input_item>
      <param_name>question</param_name>
      <param_description
      >a string or a cell of string: the question.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>title</param_name>
      <param_description
      >a string: the title of the dialog box.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>text1</param_name>
      <param_description>a string: text of button 1.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>text2</param_name>
      <param_description>a string: text of button 2.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>text3</param_name>
      <param_description>a string: text of button 3.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>default</param_name>
      <param_description
      >a string: text of selected button by default.</param_description>
    </param_input_item>

  </param_input>

  <param_output>

    <param_output_item>
      <param_name>buttonname</param_name>
      <param_description
      >a string: text of the clicked button or ''.</param_description>
    </param_output_item>
  </param_output>

  <description><p><b
      >questdlg</b> displays a string using a question dialog box and return the caption of the activated button.</p>
  <p
    >The dialog has three default buttons: 'Yes', 'No', 'Cancel' with 'Yes' as default.</p>
</description>


  <used_function />
  <bibliography />
  
<examples>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[res = questdlg('What is the answer to the ultimate question of life, the universe and everything ?', 'A question for geeks', '41', '42', '43', '42')]]>
    </example_item_data>
  </example_item>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[res = questdlg ('Easy ?', 'Jeff', 'No', 'Okay', 'Okay')]]>
    </example_item_data>
  </example_item>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[res = questdlg('How are you ?', 'Health', 'Fine', 'Good', 'sick', 'Fine')]]>
    </example_item_data>
  </example_item>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[res = questdlg({'Is', 'this', 'a', 'multi line', 'test ?'}, 'Test :)')]]>
    </example_item_data>
  </example_item>

</examples>

