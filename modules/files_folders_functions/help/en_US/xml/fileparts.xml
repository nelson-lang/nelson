	<language>en_US</language>
	<keyword>fileparts</keyword>
	<short_description>Returns the path, filename and extension of a file path.</short_description>

	<syntax>
		<syntax_item>[p, f, e] = fileparts(fullpath)</syntax_item>
		<syntax_item>p = fileparts(fullpath, 'path')</syntax_item>
		<syntax_item>f = fileparts(fullpath, 'filename')</syntax_item>
		<syntax_item>e = fileparts(fullpath, 'extension')</syntax_item>

	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>fullpath</param_name>
			<param_description>a string: file or directory name.</param_description>
		</param_input_item>
	</param_input>

	<param_output>

		<param_output_item>
			<param_name>p</param_name>
			<param_description>a string: path of the directory fullpath.</param_description>
		</param_output_item>

		<param_output_item>
			<param_name>f</param_name>
			<param_description>a string: file name without extension of fullpath.</param_description>
		</param_output_item>

		<param_output_item>
			<param_name>e</param_name>
			<param_description>a string: extension name of fullpath.</param_description>
		</param_output_item>

	</param_output>

	<description>
<p><b>[p ,f, e] = fileparts(fullpath)</b> splits in its three parts: path, filename, extension including the dot.</p>
</description>


	<used_function></used_function>
	<bibliography></bibliography>

<examples>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description></example_item_description>
