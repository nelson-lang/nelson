  <language>en_US</language>
  <keyword>isfile</keyword>
  <short_description
  >Returns true is the input argument is a file.</short_description>
  <syntax>
    <syntax_item>r = isfile(name)</syntax_item>
  </syntax>
  <param_input>
    <param_input_item>
      <param_name>name</param_name>
      <param_description>a string: filename to check.</param_description>
    </param_input_item>
  </param_input>
  <param_output>
    <param_output_item>
      <param_name>r</param_name>
      <param_description>a logical: true if it is a file.</param_description>
    </param_output_item>
  </param_output>
  <description>
    <p><b>isfile(name)</b> returns <b>true</b> if<b>name</b> is a file.</p>
  </description>
  <used_function />
  <bibliography />
  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="cli"
      ><![CDATA[isfile(nelsonroot())
isfile([nelsonroot(), '/etc/finish.m'])]]></example_item_data>
    </example_item>
  </examples>
