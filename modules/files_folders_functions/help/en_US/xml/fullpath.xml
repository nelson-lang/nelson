  <keyword>fullpath</keyword>
  <short_description>Returns canonical full path.</short_description>
  <syntax>
    <syntax_item>R = fullpath(path)</syntax_item>
  </syntax>
  <param_input>
    <param_input_item>
      <param_name>path</param_name>
      <param_description
      >a string or cell of string: filename to normalize.</param_description>
    </param_input_item>
  </param_input>
  <param_output>
    <param_output_item>
      <param_name>R</param_name>
      <param_description
      >a string or cell of string: canonical paths.</param_description>
    </param_output_item>
  </param_output>
  <description>
    <p><b>fullpath(path)</b> returns full path from a relative path.</p>
  </description>
  <used_function />
  <bibliography />
  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="cli"
      ><![CDATA[fullpath([nelsonroot(), '/../toto'])]]></example_item_data>
    </example_item>
  </examples>
