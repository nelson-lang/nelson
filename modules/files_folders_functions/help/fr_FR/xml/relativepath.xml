        <keyword>relativepath</keyword>
        <short_description
  >Renvoie le chemin relatif d'un chemin actuel vers un chemin cible.</short_description>
    <syntax>
        <syntax_item>r = relativepath(path_1, path_2)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>path_1</param_name>
            <param_description
      >a string: fichier ou répertoire.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>path_2</param_name>
            <param_description
      >a string: fichier ou répertoire cible.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>r</param_name>
            <param_description>a string: chemin relatif.</param_description>
        </param_output_item>
    </param_output>
    <description>
    <p>Renvoie le chemin relatif d'un chemin actuel vers le chemin cible.</p>
    </description>
    <used_function />
    <bibliography />
    <examples>
        <example_item>
            <example_item_type>nelson</example_item_type>
            <example_item_description />
            <example_item_data
        runnable="cli"
      ><![CDATA[relativepath(nelsonroot(), [nelsonroot(), '/lgpl-3.0.md'])
relativepath(nelsonroot(), [nelsonroot(), '/etc/finish.m'])
relativepath([nelsonroot(),'/bin'], [nelsonroot(), '/lgpl-3.0.md'])
relativepath('.', '.')
relativepath('.', '..')
relativepath('..', '.')]]></example_item_data>
        </example_item>
    </examples>
