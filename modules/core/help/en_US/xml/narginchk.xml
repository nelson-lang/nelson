	<language>en_US</language>
	<keyword>narginchk</keyword>
	<short_description>Checks the number of input arguments.</short_description>

	<syntax>
		<syntax_item>narginchk(minArgs, maxArgs)</syntax_item>
	</syntax>

	<param_input>
		<param_input_item>
			<param_name>minArgs</param_name>
			<param_description
      >minimum number of accepted inputs (scalar integer value).</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>maxArgs</param_name>
			<param_description
      >maximum number of accepted inputs (scalar integer value).</param_description>
		</param_input_item>
	</param_input>


	<description>
		<p><b>narginchk</b> checks the number of input arguments of an function.</p>
	</description>


	<used_function />
