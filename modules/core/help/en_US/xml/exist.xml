  <language>en_US</language>
  <keyword>exist</keyword>
  <short_description>Check for the existence.</short_description>

  <syntax>
    <syntax_item>res = exist(name)</syntax_item>
    <syntax_item> res = exist(name, category)</syntax_item>

  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>name</param_name>
      <param_description>a string: name of variable, function, file or directory.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>category</param_name>
      <param_description>a string: 'var', 'builtin', 'file', or 'dir'.</param_description>
    </param_input_item>
  </param_input>
  <param_output>

    <param_output_item>
      <param_name>res</param_name>
      <param_description>a integer value.</param_description>
    </param_output_item>
  </param_output>

  <description><p><b>exists</b> checks for the existence of variable, builtin, file or directory.</p>
<p><b>exists</b> returns:</p>
<p><b>0</b> does not exist</p>
<p><b>1</b> is an variable</p>
<p><b>2</b> is a file</p>
<p><b>5</b> is a builtin or function</p>
<p><b>7</b> is a directory</p>
</description>


  <used_function></used_function>
