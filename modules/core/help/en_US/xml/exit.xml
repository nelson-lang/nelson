	<language>en_US</language>
	<keyword>exit</keyword>
	<short_description>Terminate Nelson program (same as quit)</short_description>

	<syntax>
        <syntax_item>exit</syntax_item>
        <syntax_item>exit(status)</syntax_item>       
		<syntax_item>exit('force')</syntax_item>
		<syntax_item>exit('cancel')</syntax_item>
		<syntax_item>exit(status, 'force')</syntax_item>
	</syntax>

	<description>
		<p> This function is equivalent to the <b>quit</b> function.</p>
	</description>

