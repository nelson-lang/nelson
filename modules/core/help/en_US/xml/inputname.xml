	<language>en_US</language>
	<keyword>inputname</keyword>
	<short_description>Get variable name of function input.</short_description>

	<syntax>
		<syntax_item>s = inputname(argNumber)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>argNumber</param_name>
			<param_description>a scalar, real, positive integer value: Number of function input argument</param_description>
		</param_input_item>

	</param_input>

	<param_output>
		<param_output_item>
			<param_name>s</param_name>
			<param_description>character vector: variable name</param_description>
		</param_output_item>
	</param_output>

	<description><p><b>inputname</b> get variable name of function input.</p>
	<p><b>inputname</b> is only useable within a function</p>
</description>


	<used_function></used_function>
	<bibliography></bibliography>

<examples>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description></example_item_description>
		<example_item_data><![CDATA[function R = getinputname(varargin)
    R = string([]);
    for i = 1:nargin
        R = [R, string(inputname(i))];
    end
end]]>
		</example_item_data>
	</example_item>

</examples>

