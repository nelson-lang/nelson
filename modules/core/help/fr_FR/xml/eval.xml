    <language>fr_FR</language>
    <keyword>eval</keyword>
    <short_description>Évalue une expression.</short_description>
    <syntax>
        <syntax_item>eval(str)</syntax_item>
        <syntax_item>eval(str, catch_str)</syntax_item>
        <syntax_item>[r1, ... rn] = eval(str)</syntax_item>
        <syntax_item>[r1, ... rn] = eval(str, catch_str)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>str</param_name>
            <param_description>chaîne : expression à évaluer</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>[r1, ... rn]</param_name>
            <param_description
      >résultats : variables de sortie</param_description>
        </param_output_item>
    </param_output>
    <description>
  <p
    >Évalue une expression ou une commande au sein de l'environnement Nelson et retourne le résultat de l'évaluation.</p>
</description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[eval('B=4')]]></example_item_data>
            </example_item>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description
      >Cet exemple échouera et renverra un message d'erreur.</example_item_description>
                <example_item_data
        runnable="cli"
      ><![CDATA[C = eval('B=4')]]></example_item_data>
            </example_item>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[D = eval(4)]]></example_item_data>
            </example_item>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description
      >Cet exemple n'échouera pas et renverra faux.</example_item_description>
                <example_item_data
        runnable="cli"
      ><![CDATA[eval('error(''blabla'')', 'l = lasterror(); disp([''lasterror message: '', l.message])')]]></example_item_data>
            </example_item>
        </examples>
