    <language>fr_FR</language>
    <keyword>cart2pol</keyword>
        <short_description
  >Transforme des coordonnées cartésiennes en coordonnées polaires ou cylindriques.</short_description>
    <syntax>
        <syntax_item>[theta, rho] = cart2pol(x, y)</syntax_item>
        <syntax_item>[theta, rho, z] = cart2pol(x, y, z)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>x</param_name>
        <param_description
      >une valeur numérique (double ou simple réel) : Coordonnées cartésiennes</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>y</param_name>
        <param_description
      >une valeur numérique (double ou simple réel) : Coordonnées cartésiennes</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>z</param_name>
        <param_description
      >une valeur numérique (double ou simple réel) : Coordonnées cartésiennes</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>theta</param_name>
        <param_description
      >une valeur numérique : Coordonnée angulaire.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>rho</param_name>
        <param_description
      >une valeur numérique : Coordonnée radiale.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>z</param_name>
            <param_description
      >a numeric value: Elevation coordinate.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <b
    >cart2pol</b> transforms Cartesian coordinates to polar or cylindrical.</description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[x = [5 3.5355 0 -10];
y = [0 3.5355 10 0];
[theta, rho] = cart2pol(x, y)]]></example_item_data>
            </example_item>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[x = [1 2.1213 0 -5];
y = [0 2.1213 4 0];
z = [7 8 9 10];
[theta, rho, el] = cart2pol(x, y, z)]]></example_item_data>
            </example_item>
        </examples>
