    <language>fr_FR</language>
    <keyword>pol2cart</keyword>
        <short_description
  >Transforme des coordonnées polaires ou cylindriques en coordonnées cartésiennes.</short_description>
    <syntax>
        <syntax_item>[x, y] = pol2cart(theta, rho)</syntax_item>
        <syntax_item>[x, y, z] = pol2cart(theta, rho, z)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>theta</param_name>
        <param_description
      >une valeur numérique : Coordonnée angulaire.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>rho</param_name>
        <param_description
      >une valeur numérique : Coordonnée radiale.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>z</param_name>
        <param_description
      >une valeur numérique : Coordonnée d'élévation.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>x</param_name>
        <param_description
      >une valeur numérique (double ou simple réel) : Coordonnées cartésiennes</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>y</param_name>
        <param_description
      >une valeur numérique (double ou simple réel) : Coordonnées cartésiennes</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>z</param_name>
            <param_description
      >a numeric value (double or single real): Cartesian coordinates</param_description>
        </param_output_item>
    </param_output>
    <description>
        <b
    >pol2cart</b> transforms polar or cylindrical coordinates to Cartesian.</description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[theta = [0 pi/4 pi/2 pi];
rho = [5 5 10 10];
[x, y] = pol2cart(theta, rho)]]></example_item_data>
            </example_item>
        </examples>
