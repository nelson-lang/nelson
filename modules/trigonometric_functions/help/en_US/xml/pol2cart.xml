	<language>en_US</language>
	<keyword>pol2cart</keyword>
	<short_description>Transforms polar or cylindrical coordinates to Cartesian.</short_description>

	<syntax>
		<syntax_item>[x, y] = pol2cart(theta, rho)</syntax_item>
		<syntax_item>[x, y, z] = pol2cart(theta, rho, z)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>theta</param_name>
			<param_description>a numeric value: Angular coordinate.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>rho</param_name>
			<param_description>a numeric value: Radial coordinate.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>z</param_name>
			<param_description>a numeric value: Elevation coordinate.</param_description>
		</param_input_item>
	</param_input>

	<param_output>
		<param_output_item>
			<param_name>x</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>y</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>z</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_output_item>

	</param_output>

	<description><b>pol2cart</b> transforms polar or cylindrical coordinates to Cartesian.</description>

	<used_function></used_function>
	<bibliography></bibliography>

<examples>
	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description></example_item_description>
		<example_item_data><![CDATA[theta = [0 pi/4 pi/2 pi];
rho = [5 5 10 10];
[x, y] = pol2cart(theta, rho)]]>
		</example_item_data>
	</example_item>


</examples>

