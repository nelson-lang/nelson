  <language>en_US</language>
  <keyword>deg2rad</keyword>
  <short_description>Convert angle from degrees to radians.</short_description>
  <syntax>
    <syntax_item>r = deg2rad(d)</syntax_item>
  </syntax>
  <param_input>
    <param_input_item>
      <param_name>d</param_name>
      <param_description>a numeric value (double or single)</param_description>
    </param_input_item>
  </param_input>
  <param_output>
    <param_output_item>
      <param_name>r</param_name>
      <param_description>a numeric value</param_description>
    </param_output_item>
  </param_output>
  <description><b
    >d = deg2rad(r)</b> converts angle units from degrees to radians for each element of <b
    >r</b>.</description>
  <used_function />
  <bibliography />
  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="cli"
      ><![CDATA[D = 64.7;
R = deg2rad(D);
radEarth = 6371;
dist = radEarth * R]]></example_item_data>
    </example_item>
  </examples>
