	<language>en_US</language>
	<keyword>cart2pol</keyword>
	<short_description>Transforms Cartesian coordinates to polar or cylindrical.</short_description>

	<syntax>
		<syntax_item>[theta, rho] = cart2pol(x, y)</syntax_item>
		<syntax_item>[theta, rho, z] = cart2pol(x, y, z)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>x</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>y</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>z</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_input_item>
	</param_input>

	<param_output>
		<param_output_item>
			<param_name>theta</param_name>
			<param_description>a numeric value: Angular coordinate.</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>rho</param_name>
			<param_description>a numeric value: Radial coordinate.</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>z</param_name>
			<param_description>a numeric value: Elevation coordinate.</param_description>
		</param_output_item>

	</param_output>

	<description><b>cart2pol</b> transforms Cartesian coordinates to polar or cylindrical.</description>

	<used_function></used_function>
	<bibliography></bibliography>

