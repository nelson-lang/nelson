	<language>en_US</language>
	<keyword>sph2cart</keyword>
	<short_description>Transform spherical coordinates to Cartesian.</short_description>

	<syntax>
		<syntax_item>[x, y, z] = sph2cart(azimuth, elevation, r)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>azimuth</param_name>
			<param_description>a numeric value: Azimuth angle.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>elevation</param_name>
			<param_description>a numeric value: Elevation angle.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>r</param_name>
			<param_description>a numeric value: Radius.</param_description>
		</param_input_item>
	</param_input>

	<param_output>
		<param_output_item>
			<param_name>x</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>y</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>z</param_name>
			<param_description>a numeric value (double or single real): Cartesian coordinates</param_description>

		</param_output_item>

	</param_output>

	<description><b>sph2cart</b> transforms Cartesian to spherical coordinates.</description>

	<used_function></used_function>
	<bibliography></bibliography>

<examples>
	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description></example_item_description>
		<example_item_data><![CDATA[azimut = [0.7854, 0.7854, -0.7854, -0.7854; 2.3562, 2.3562, -2.3562, -2.3562];
elevation = [0.6155, -0.6155, 0.6155, -0.6155; 0.6155, -0.6155, 0.6155, -0.6155];
radius = 1.7321 * ones(2, 4);
[x, y, z] = sph2cart(azimut, elevation, radius)]]>
		</example_item_data>
	</example_item>

</examples>

