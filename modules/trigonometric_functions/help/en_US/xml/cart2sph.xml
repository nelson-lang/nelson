	<language>en_US</language>
	<keyword>cart2sph</keyword>
	<short_description
  >Transforms Cartesian to spherical coordinates.</short_description>

	<syntax>
		<syntax_item>[azimuth, elevation, r] = cart2sph(x, y, z)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>x</param_name>
			<param_description
      >a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>y</param_name>
			<param_description
      >a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>z</param_name>
			<param_description
      >a numeric value (double or single real): Cartesian coordinates</param_description>
		</param_input_item>
	</param_input>

	<param_output>
		<param_output_item>
			<param_name>azimuth</param_name>
			<param_description>a numeric value: Azimuth angle.</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>elevation</param_name>
			<param_description>a numeric value: Elevation angle.</param_description>
		</param_output_item>
		<param_output_item>
			<param_name>r</param_name>
			<param_description>a numeric value: Radius.</param_description>
		</param_output_item>

	</param_output>

	<description><b
    >cart2sph</b> transforms Cartesian to spherical coordinates.</description>

	<used_function />
	<bibliography />

<examples>
	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data
      ><![CDATA[x = [1 1 1 1; -1 -1 -1 -1];
y = [1 1 -1 -1; 1 1 -1 -1];
z = [1 -1 1 -1; 1 -1 1 -1];
[az, el, r] = cart2sph(x, y, z)]]>
		</example_item_data>
	</example_item>

</examples>

