  <language>en_US</language>
  <keyword>fftshift</keyword>
  <short_description
  >Shift the zero-frequency component to the center of the spectrum.</short_description>

  <syntax>
    <syntax_item>Y = fftshift(X)</syntax_item>
    <syntax_item>Y = fftshift(X, DIM)</syntax_item>
  </syntax>
  
  <param_input>
  
    <param_input_item>
      <param_name>X</param_name>
      <param_description
      >a vector, matrix or N-D array (double, single, integer).</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>DIM</param_name>
      <param_description>axes over which to shift.</param_description>
    </param_input_item>
  </param_input>

  <param_output>

    <param_output_item>
      <param_name>Y</param_name>
      <param_description>shifted array.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b
      >fftshift(X)</b> shift the zero-frequency component to the center of the spectrum.</p>
</description>


  <used_function />
  <bibliography />

<examples>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[M = [ 0.,  10.,  20.; 30.,  40., -40.; -30., -20., -10.]
fftshift(M)
fftshift(M, 1)]]>
    </example_item_data>
  </example_item>

</examples>

