    <language>fr_FR</language>
    <keyword>polyvalm</keyword>
    <short_description>Évaluation de polynôme matriciel.</short_description>
    <syntax>
        <syntax_item>Y = polyvalm(p, X)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>p</param_name>
            <param_description
      >vecteur : coefficients du polynôme</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>X</param_name>
            <param_description
      >matrice carrée : matrice d'entrée</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>Y</param_name>
            <param_description
      >vecteur ligne : coefficients polynomiaux de sortie (ou résultat du polynôme matriciel)</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p><b>polyvalm</b> évalue un polynôme matriciel.</p>
    </description>
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[
R = polyvalm ([1, 2, 3, 4], [3, -4, 1; -2, 0, 2; -1, 4, -3])]]></example_item_data>
            </example_item>
        </examples>
