  <language>en_US</language>
  <keyword>polyval</keyword>
  <short_description>Polynomial evaluation.</short_description>
  <syntax>
    <syntax_item>y = polyval(p, x)</syntax_item>
  </syntax>
  <param_input>
    <param_input_item>
      <param_name>p</param_name>
      <param_description>vector: polynomial coefficients</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>x</param_name>
      <param_description>query points</param_description>
    </param_input_item>
  </param_input>
  <param_output>
    <param_output_item>
      <param_name>y</param_name>
      <param_description>vector: Function values</param_description>
    </param_output_item>
  </param_output>
  <description>
    <p><b>polyval</b> evaluates polynomial at several points.</p>
  </description>
  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="cli"
      ><![CDATA[
p = [3 2 1];
x = [5 7 9];
R = polyval(p, x)]]></example_item_data>
    </example_item>
  </examples>
