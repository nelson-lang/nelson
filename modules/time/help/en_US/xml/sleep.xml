  <language>en_US</language>
  <keyword>sleep</keyword>
  <short_description>Suspend code execution.</short_description>

  <syntax>
    <syntax_item>sleep(sec)</syntax_item>
  </syntax>
  

  <param_input>
    <param_input_item>
      <param_name>n</param_name>
      <param_description
      >a double: duration of the sleep in seconds (decimal number).</param_description>
    </param_input_item>
  </param_input>

  <description>
   <p><b
      >sleep</b> stops Nelson processing any instruction for a speficied number of seconds.</p>
   <p> CTRL-C interruption stops <b>sleep</b>.</p>
  </description>
  <used_function />
  <bibliography />

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[tic();sleep(1);toc()
tic();sleep(0.1);toc()
tic();sleep(0.01);toc()]]>
    </example_item_data>
  </example_item>

</examples>

