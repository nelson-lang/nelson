            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[signal = rand(2, 44100) - 0.5;
sound(signal, 44110, 16)	  
]]></example_item_data>
            </example_item>
        </examples>
