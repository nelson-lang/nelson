  <language>fr_FR</language>
  <keyword>playblocking</keyword>
  <short_description
  >Lit un objet audioplayer de manière bloquante.</short_description>
  <syntax>
    <syntax_item>playblocking(playObj)</syntax_item>
    <syntax_item>playblocking(playObj, start)</syntax_item>
    <syntax_item>playblocking(playObj, [start end])</syntax_item>
  </syntax>
  <param_input>
    <param_input_item>
      <param_name>playObj</param_name>
      <param_description>un objet audioplayer.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>start</param_name>
      <param_description
      >une valeur entière : premier échantillon à lire.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>end</param_name>
      <param_description
      >une valeur entière : dernier échantillon à lire.</param_description>
    </param_input_item>
  </param_input>
  <description><b
    >playblocking</b> lit un objet audioplayer jusqu'à ce que la lecture soit terminée.</description>
  <used_function />
  <bibliography />
  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="cli"
      ><![CDATA[signal = rand(2, 44100) - 0.5;
playObj = audioplayer(signal, 44100, 16)
playblocking(playObj)
delete(playObj)
playObj]]></example_item_data>
    </example_item>
  </examples>
