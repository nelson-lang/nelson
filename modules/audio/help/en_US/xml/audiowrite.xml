	<language>en_US</language>
	<keyword>audiowrite</keyword>
	<short_description>Writes an audio file.</short_description>

	<syntax>
    <syntax_item>audiowrite(filename, y, fs)</syntax_item>
    <syntax_item>audiowrite(filename, y, fs, fieldname, fieldvalue, ...)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>filename</param_name>
			<param_description>a string: filename to create.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>y</param_name>
			<param_description>a matrix: audio data.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>fs</param_name>
			<param_description>an integer value: sampling rate.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>fieldname</param_name>
			<param_description>a string: 'BitsPerSample', 'BitRate', 'Quality', 'Title', 'Artist' or 'Comment' .</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>fieldvalue</param_name>
			<param_description>value associated to the fieldname.</param_description>
		</param_input_item>

	</param_input>


	<description>
		<p><b>audiorwrite</b> writes an audio file.</p>
    <p>More 25 files format supported. See <b>audiosupportedformats</b> function to have all supported formats.</p>

	</description>

	<used_function></used_function>
	<bibliography></bibliography>

<examples>


	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description></example_item_description>
		<example_item_data><![CDATA[wav_audio = [modulepath('audio'), '/examples/haha.wav'];
[y, fs] = audioread(wav_audio);
dest_ogg = [tempdir(), '/haha.ogg'];
audiowrite(dest_ogg, y, fs);
dest_flac = [tempdir(), '/haha.flac'];
audiowrite(dest_flac, y, fs);
]]>
		</example_item_data>
	</example_item>

</examples>

