	<language>en_US</language>
	<keyword>lin2mu</keyword>
	<short_description
  >Convert audio data from linear singal to mu-law.</short_description>

	<syntax>
		<syntax_item>mu = lin2mu(y)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>y</param_name>
			<param_description>linear signal with -1 ≤ y ≤ 1.</param_description>
		</param_input_item>
	</param_input>

	<param_output>
		<param_output_item>
			<param_name>mu</param_name>
			<param_description
      >mu-law encoded 8-bit audio signals, with 0 ≤ mu ≤ 255.</param_description>
		</param_output_item>
	</param_output>

	<description>
	<p><b>mu = lin2mu(y)</b> converts audio data from linear to mu-law.</p>
	</description>
	<used_function />
	<bibliography>https://en.wikipedia.org/wiki/%CE%9C-law_algorithm</bibliography>

<examples>
	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data><![CDATA[mu = lin2mu([-1:0.5:1])]]>
		</example_item_data>
	</example_item>

</examples>

