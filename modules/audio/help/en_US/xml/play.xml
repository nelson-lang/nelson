	<language>en_US</language>
	<keyword>play</keyword>
	<short_description>Plays an audioplayer object.</short_description>

	<syntax>
		<syntax_item>play(playObj)</syntax_item>
		<syntax_item>play(playObj, start)</syntax_item>
		<syntax_item>play(playObj, [start end])</syntax_item>

	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>playObj</param_name>
			<param_description>an audioplayer object.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>start</param_name>
			<param_description>an integer value: first sample to play.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>end</param_name>
			<param_description>an integer value: last sample to play.</param_description>
		</param_input_item>
	</param_input>

	<description><b>play</b> plays an audioplayer object.</description>

	<used_function></used_function>
	<bibliography></bibliography>

<examples>


	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description></example_item_description>
		<example_item_data><![CDATA[signal = rand(2, 44100) - 0.5;
playObj = audioplayer(signal, 44100, 16)
play(playObj)
sleep(2)
delete(playObj)
playObj]]>
		</example_item_data>
	</example_item>

</examples>

