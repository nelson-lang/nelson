    <keyword>xmldocbuild</keyword>
    <short_description
  >Internal function to convert xml document files to html.</short_description>
    <syntax>
        <syntax_item
    >status = xmldocbuild(source_dirs, destination_dir, main_title, export_format, overwrite)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>source_dirs</param_name>
            <param_description
      >a cell of string: list of xml filenames.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>destination_dir</param_name>
            <param_description
      >a string: directory destination.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>main_title</param_name>
            <param_description
      >a string: title of main index.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>export_format</param_name>
            <param_description>a string: 'html' or 'md'.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>overwrite</param_name>
            <param_description
      >a logical: force overwrite if file destination already exists</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>status</param_name>
            <param_description
      >a logical: files generated or not.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>xmldocbuild</b> convert xml document files to html.</p>
            <p>internal function</p>
        </description>
