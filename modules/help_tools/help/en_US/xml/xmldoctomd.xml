  <language>en_US</language>
  <keyword>xmldoctomd</keyword>
  <short_description
  >Converts xml Nelson help files to markdown format.</short_description>

  <syntax>
    <syntax_item
    >status = xmldoctomd(source_dirs, destination_dir, main_title, overwrite)</syntax_item>
  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>source_dirs</param_name>
      <param_description
      >a cell of string: list of xml filenames.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>destination_dir</param_name>
      <param_description>a string: directory destination.</param_description>
    </param_input_item>
    

    <param_input_item>
      <param_name>main_title</param_name>
      <param_description>a string: title of main index.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>overwrite</param_name>
      <param_description
      >a logical: force overwrite if file destination already exists</param_description>
    </param_input_item>
  </param_input>


  <param_output>
    <param_output_item>
      <param_name>status</param_name>
      <param_description>a logical: files generated or not.</param_description>
    </param_output_item>
  </param_output>

  <description><p><b
      >xmldoctomd</b> converts xml Nelson help files to markdown format.</p>
</description>
