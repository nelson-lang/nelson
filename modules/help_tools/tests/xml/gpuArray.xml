	<language>en_US</language>
	<keyword>gpuArray</keyword>
	<short_description>Array sent to GPU.</short_description>

	<syntax>
		<syntax_item>G = gpuArray(X)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>X</param_name>
			<param_description>a variable: double, single and complex scalar, vector, matrix 2D currently supported.</param_description>
		</param_input_item>
	</param_input>

	<param_output>
		<param_output_item>
			<param_name>G</param_name>
			<param_description>a gpuArray object.</param_description>
		</param_output_item>
	</param_output>

	<description><p><b>G = gpuArray(X)</b> copies matrix X to the GPU and returns a gpuArray object.</p>
</description>


	<used_function></used_function>
	<bibliography></bibliography>
	

