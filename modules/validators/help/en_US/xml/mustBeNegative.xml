  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>var</param_name>
      <param_description
      >a variable: all supported types and classes that implement isnumeric, islogical, all, isreal, and lt methods.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>argPosition</param_name>
      <param_description
      >a positive integer value: Position of input argument.</param_description>
    </param_input_item>
  </param_input>


  <description>
