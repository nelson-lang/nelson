	<language>en_US</language>
	<keyword>strjust</keyword>
	<short_description>Justify strings</short_description>

	<syntax>
		<syntax_item>J = strjust(str)</syntax_item>
		<syntax_item>J = strjust(str, side)</syntax_item>

	</syntax>

	<param_input>
		<param_input_item>
			<param_name>str</param_name>
			<param_description
      >characters vector, cell of characters or string array.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>side</param_name>
			<param_description>'left', 'center', 'right' (default).</param_description>
		</param_input_item>

	</param_input>


	<param_output>
		<param_output_item>
			<param_name>J</param_name>
			<param_description>justified text</param_description>
		</param_output_item>
	</param_output>

    <description>
		<p><b
      >J = strjust(str, side)</b> returns the text that is justified on the side specified by <b
      >side</b>.</p>
	</description>

	<used_function />
	<bibliography />

<examples>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data
      ><![CDATA[S = ["a"; "ab"; "abc"; "abcd"];
J = strjust (S)
J = strjust (S, 'left')
J = strjust (S, 'center')
J = strjust (S, 'right')]]>
		</example_item_data>
	</example_item>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data><![CDATA[J = strjust('                 text', 'center')]]>
		</example_item_data>
	</example_item>

</examples>

