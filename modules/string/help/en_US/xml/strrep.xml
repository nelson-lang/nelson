  <language>en_US</language>
  <keyword>strrep</keyword>
  <short_description>Replaces strings in another.</short_description>

  <syntax>
    <syntax_item>res = strrep(str, old, new)</syntax_item>
  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>str</param_name>
      <param_description
      >a string, string array or cell of strings.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>old</param_name>
      <param_description
      >a string, string array or cell of strings to find.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>new</param_name>
      <param_description
      >a string, string array or cell of strings.</param_description>
    </param_input_item>
    
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>res</param_name>
      <param_description
      >a string, string array or cell of strings.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b>replace</b> replaces strings in another.</p>
    <p><b>replace</b> and <b>strrep</b> replace strings but <b
      >replace</b> is recommended.</p>
  </description>
  <used_function />
  <bibliography />

<examples>


  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[r = strrep('This is a string.', 'is', 'is not')
r = strrep({'cccc','ccbbcca'},{'cc','bb'},{'cc'})
r = strrep("This is a string.", "is", 'is not')]]>
    </example_item_data>
  </example_item>
</examples>

