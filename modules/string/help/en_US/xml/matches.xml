  <language>en_US</language>
  <keyword>matches</keyword>
  <short_description
  >Determine if pattern matches with strings.</short_description>

  <syntax>
    <syntax_item>res = matches(str, pattern)</syntax_item>
    <syntax_item>res = matches(str, pattern, 'IgnoreCase', true)</syntax_item>
  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>str</param_name>
      <param_description
      >a string, string array or cell of strings.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>pattern</param_name>
      <param_description
      >a string, string array or cell of strings.</param_description>
    </param_input_item>
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>res</param_name>
      <param_description
      >a logical: true if the two matches and false otherwise. </param_description>
    </param_output_item>
  </param_output>

  <description><b
    >matches</b> determines if pattern matches with strings.</description>
  <used_function />
  <bibliography />

<examples>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
        runnable="cli"
      ><![CDATA[matches("Nelson", 'nelSon')
matches("Nelson", 'Nelson')
str = ["yellow", "green", "blue", "brown"];
R = matches(str, ["yellow", "Brown"], 'IgnoreCase', true);
]]>
    </example_item_data>
  </example_item>
</examples>

