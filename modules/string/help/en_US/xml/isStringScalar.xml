    <keyword>isStringScalar</keyword>
    <short_description
  >checks if input is string array with one element.</short_description>
    <syntax>
        <syntax_item>r = isStringScalar(str)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>str</param_name>
            <param_description
      >a string, string array or cell of strings.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>r</param_name>
            <param_description
      >a logical, true if res is string type and scalar.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b
      >isStringScalar</b> checks if input is string array with one element.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[r = isStringScalar('hello')
r = isStringScalar("hello")
r = isStringScalar(["hello", "world"])]]></example_item_data>
            </example_item>
        </examples>
