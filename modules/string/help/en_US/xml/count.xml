  <language>en_US</language>
  <keyword>count</keyword>
  <short_description>Computes the number of occurrences of an pattern.</short_description>

  <syntax>
    <syntax_item>nbocc = count(str, pattern)</syntax_item>
    <syntax_item>nbocc = count(str, pattern,'IgnoreCase', true)</syntax_item>
    <syntax_item>nbocc = count(str, pattern,'IgnoreCase', false)</syntax_item>

  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>str</param_name>
      <param_description>a string or cell of strings.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>pattern</param_name>
      <param_description>a string to find.</param_description>
    </param_input_item>
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>nbocc</param_name>
      <param_description>a matrix of integer values.</param_description>
    </param_output_item>
  </param_output>

  <description><b>count</b> computes the number of occurrences of an pattern.</description>
  <used_function></used_function>
  <bibliography></bibliography>

<examples>


  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description></example_item_description>
    <example_item_data><![CDATA[
str = 'To make a mountain out of a molehill';
k = count(str, 'hill')
k = count(str, 'molehill')
k = count(str, 'Hill', 'IgnoreCase', true)

A = {'Nel', 'son'; 'Nelson', 'Modules'}
k = count(A, 'son')

]]>
    </example_item_data>
  </example_item>
</examples>

