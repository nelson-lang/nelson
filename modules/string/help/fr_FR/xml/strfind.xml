    <language>fr_FR</language>
    <keyword>strfind</keyword>
    <short_description>Trouve une chaîne dans une autre.</short_description>
    <syntax>
        <syntax_item>occ = strfind(str, pattern)</syntax_item>
        <syntax_item
    >occ = strfind(str, pattern,'ForceCellOutput', ouput)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>str</param_name>
            <param_description
      >une chaîne ou une cellule de chaînes.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>pattern</param_name>
            <param_description>une chaîne à rechercher.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>output</param_name>
            <param_description>un booléen.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>occ</param_name>
            <param_description
      >une cellule ou une matrice de valeurs entières : positions des occurrences.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <b>strfind</b> trouve une chaîne dans une autre.</description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[
str = 'To make a mountain out of a molehill';
k = strfind (str, 'in')
k= strfind(str, ' ')
k = strfind ({'abababada', 'beabebe', 'ab'}, 'aba')

A = {'Nel', 'son'; 'Toolboxes', 'Modules'}
k = strfind(A, 'o')

str = 'No pain no gain.';
k = strfind(str,'in','ForceCellOutput',true)
k = strfind(str,'in','ForceCellOutput',false)
]]></example_item_data>
            </example_item>
        </examples>
