    <language>fr_FR</language>
    <keyword>strjust</keyword>
    <short_description>Justifie les chaînes</short_description>
    <syntax>
        <syntax_item>J = strjust(str)</syntax_item>
        <syntax_item>J = strjust(str, side)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>str</param_name>
            <param_description
      >vecteur de caractères, cellule de caractères ou tableau de chaînes.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>side</param_name>
            <param_description
      >'left', 'center', 'right' (par défaut).</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>J</param_name>
            <param_description>texte justifié</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p><b
      >J = strjust(str, side)</b> renvoie le texte justifié du côté spécifié par <b
      >side</b>.</p>
     </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[
S = ["left"; "center"; "right"];
J = strjust (S, 'left')
J = strjust (S, 'center')
J = strjust (S, 'right')]]></example_item_data>
            </example_item>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[J = strjust('                 text', 'center')]]></example_item_data>
            </example_item>
        </examples>
