        <language>fr_FR</language>
        <keyword>count</keyword>
        <short_description
  >Calcule le nombre d'occurrences d'un motif.</short_description>
    <syntax>
        <syntax_item>nbocc = count(str, pattern)</syntax_item>
        <syntax_item
    >nbocc = count(str, pattern,'IgnoreCase', true)</syntax_item>
        <syntax_item
    >nbocc = count(str, pattern,'IgnoreCase', false)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
        <param_name>str</param_name>
        <param_description
      >une chaîne, un tableau de chaînes ou une cellule de chaînes.</param_description>
        </param_input_item>
        <param_input_item>
        <param_name>pattern</param_name>
        <param_description
      >une chaîne, un tableau de chaînes ou une cellule de chaînes à rechercher.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>nbocc</param_name>
            <param_description>une matrice d'entiers.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p><b>count</b> calcule le nombre d'occurrences d'un motif.</p>
    </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[
str = 'To make a mountain out of a molehill';
k = count(str, 'hill')
k = count(str, 'molehill')
k = count(str, 'Hill', 'IgnoreCase', true)

A = {'Nel', 'son'; 'Nelson', 'Modules'}
k = count(A, 'son')

A = ["Nel", "son"; "Nelson", "Modules"]
k = count(A, 'son')

]]></example_item_data>
            </example_item>
        </examples>
