    <language>fr_FR</language>
    <keyword>dlmake</keyword>
    <short_description>Appeler l'outil make ou nmake</short_description>
    <syntax>
        <syntax_item>[res, message] = dlmake(destinationdir)</syntax_item>
        <syntax_item
    >[res, message] = dlgeneratemake(destinationdir, libname, c_cpp_files, includes, defines, external_libraries, build_configuration, c_flags, cxx_flags)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
        <param_name>destinationdir</param_name>
        <param_description
      >une chaîne : répertoire contenant le makefile à exécuter.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
        <param_name>res</param_name>
        <param_description
      >un booléen : true si l'exécution du makefile a réussi.</param_description>
        </param_output_item>
        <param_output_item>
        <param_name>message</param_name>
        <param_description
      >une chaîne : vide si l'exécution a réussi, sinon un message d'erreur.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
        <b
      >dlmake</b> fournit un moyen multiplateforme pour construire du code C/C++.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description
      >basic example to call dlmake</example_item_description>
                <example_item_data
        runnable="cli"
      ><![CDATA[
dest = [tempdir(), 'dlmake_help']; 
mkdir(dest);		
txt = 'MESSAGE( STATUS "Hello world !")';		
filewrite([dest, '/CMakeLists.txt'], txt);
[status, message] = dlmake(dest)		
]]></example_item_data>
            </example_item>
        </examples>
