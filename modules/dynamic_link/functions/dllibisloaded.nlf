function varargout = dllibisloaded(libraryname)
  if ~ischar(libraryname)
    error(_('Wrong type for argument #1: string expected.'));
  end
  used = dllib_used();
  if isempty(used)
    varargout{1} = false;
    varargout{2} = [];
  else
    try
      lib = dlopen(libraryname);
      fullname = lib.Path;
      dlclose(lib);
      for l = used
        if strcmp(l.Path, fullname) == true
          varargout{1} = true;
          varargout{2} = l;
          break;
        end
      end
    catch
      varargout{1} = false;
      varargout{2} = [];
    end
  end
endfunction
