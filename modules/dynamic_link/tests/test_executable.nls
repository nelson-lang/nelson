// <--C/C++ COMPILER REQUIRED--> 
//=============================================================================
destinationdir = [tempdir(), 'test_cmake_executable'];
mkdir(destinationdir);
//=============================================================================
currentpath = fileparts(nfilename('fullpathext'));
copyfile([currentpath, '/test_executable.c'], [destinationdir, '/test_executable.c']);
//=============================================================================
[status, message] = dlgeneratemake('executable', destinationdir, ...
        'test_executable', ...
        [destinationdir, '/test_executable.c'], ...
        [destinationdir, '/']);
if ~status
  error(message);
end
destinationPath = [destinationdir, '/CMakeLists.txt'];
assert_istrue(isfile(destinationPath));
[status, message] = dlmake(destinationdir);
[R, msg] = unix([destinationdir, '/test_executable']);
assert_istrue(R == 0);
assert_istrue(startsWith(msg, 'It works !!!'));
