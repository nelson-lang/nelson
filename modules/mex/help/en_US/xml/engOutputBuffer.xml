	<language>en_US</language>
	<keyword>engOutputBuffer</keyword>
	<short_description>Specify char buffer for Nelson output</short_description>
	<syntax>
		<syntax_item>#include "engine.h"</syntax_item>
		<syntax_item>int engOutputBuffer(Engine *ep, char *p, int n);</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>Engine *ep</param_name>
			<param_description>handle to Nelson engine.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>char *p</param_name>
			<param_description>Pointer to character buffer.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>int n</param_name>
			<param_description>Length of buffer.</param_description>
		</param_input_item>
	</param_input>

  <param_output>
    <param_output_item>
      <param_name>int</param_name>
      <param_description
      >returns 1 if the engine session is closed or invalid. Otherwise, returns 0.</param_description>
    </param_output_item>
  </param_output>

	<description>
		<p>Specify char buffer for Nelson output.</p>
		<p>To turn off output buffering in C, use: <b
      >engOutputBuffer(ep, NULL, 0);</b></p>
	</description>

