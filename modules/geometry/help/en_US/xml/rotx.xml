  <language>en_US</language>
  <keyword>rotx</keyword>
  <short_description
  >3x3 transformation matrix for rotations around x-axis</short_description>

  <syntax>
    <syntax_item>rm = rotx(angle)</syntax_item>
  </syntax>
  
  <param_input>

    <param_input_item>
      <param_name>angle</param_name>
      <param_description>angle in degree: scalar value.</param_description>
    </param_input_item>
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>rm</param_name>
      <param_description
      >3x3 transformation matrix: real-valued orthogonal matrix.</param_description>
    </param_output_item>
  </param_output>

  <description><p><b
      >rotx</b> returns 3x3 transformation matrix for rotations around x-axis.</p>
</description>
