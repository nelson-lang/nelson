function t = timestamp()
  n = now();
  v = datevec(n);
  year_str = int2str(v(1));
  
  month_str = int2str(v(2));
  if length(month_str) == 1
    month_str = ['0', month_str];
  end
  
  day_str = int2str(v(3));
  if length(day_str) == 1
    day_str = ['0', day_str];
  end
  
  hour_str = int2str(v(4));
  if length(hour_str) == 1
    hour_str = ['0', hour_str];
  end
  
  min_str = int2str(v(5));
  if length(min_str) == 1
    min_str = ['0', min_str];
  end
  
  sec_str = int2str(v(6));
  if length(sec_str) == 1
    sec_str = ['0', sec_str];
  end
  
  t = [year_str, '-', month_str, '-', day_str, 'T', hour_str, ':', min_str, ':', sec_str];
endfunction
