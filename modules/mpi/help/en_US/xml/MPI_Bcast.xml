  <language>en_US</language>
  <keyword>MPI_Bcast</keyword>
  <short_description>Broadcasts a message from the process with rank "root" to all other processes of the communicator</short_description>

  <syntax>
    <syntax_item>A = MPI_Bcast(A, Root)</syntax_item>
    <syntax_item>A = MPI_Bcast(A, Root, Comm)</syntax_item>
  </syntax>

  <param_input>

    <param_input_item>
      <param_name>A</param_name>
      <param_description>a nelson variable.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>Root</param_name>
      <param_description>a integer value: rank of broadcast root.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>Comm</param_name>
      <param_description>a MPI_Comm object.</param_description>
    </param_input_item>
    
  </param_input>


  <param_output>
    <param_output_item>
      <param_name>A</param_name>
      <param_description>broadcasted array.</param_description>
    </param_output_item>
  </param_output>

  <description>
  <p>This function is used to broadcast an array to all group members.</p>
</description>

  <used_function></used_function>
  <bibliography></bibliography>

  <see_also>
    <see_also_item>
      <link linkend="${mpi}MPI_Barrier">MPI_Barrier</link>
    </see_also_item>
  </see_also>


<examples>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description>mpiexec([modulepath('mpi'), '/examples/help_examples/MPI_Bcast.nls'], 4)</example_item_description>
    <example_item_data><![CDATA[
if ~MPI_Initialized()
  MPI_Init();
end
my_rank = MPI_Comm_rank();
num_ranks = MPI_Comm_size();
root = 0;
if (my_rank == 0)
  buff = 777;
else
  buff = 0;
end
disp(['rank: ', int2str(my_rank), ': before Bcast, buff is ', int2str(buff)])
buff = MPI_Bcast(buff, root);
disp(['rank: ', int2str(my_rank), ': after Bcast, buff is ', int2str(buff)])
if MPI_Initialized()
  MPI_Finalize();
end
]]>
    </example_item_data>
  </example_item>

</examples>


