    <keyword>MPI_Get_processor_name</keyword>
    <short_description>Récupère le nom du processeur.</short_description>
    <syntax>
        <syntax_item
    >[name, namelen, info] = MPI_Get_processor_name()</syntax_item>
    </syntax>
    <param_output>
        <param_output_item>
            <param_name>name</param_name>
        <param_description
      >chaîne : nom du processeur utilisant MPI.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>namelen</param_name>
        <param_description
      >entier : longueur (en caractères) du nom.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>info</param_name>
        <param_description
      >entier : 0 MPI_SUCCESS, 16 MPI_ERR_OTHER.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>Cette fonction récupère le nom du processeur utilisant MPI.</p>
    </description>
    <used_function />
    <bibliography />
    <examples>
        <example_item>
            <example_item_type>nelson</example_item_type>
            <example_item_description />
            <example_item_data
        runnable="false"
      ><![CDATA[
if ~MPI_Initialized()
  MPI_Init();
end
[name, len, info] = MPI_Get_processor_name()
if MPI_Initialized()
  MPI_Finalize();
end
]]></example_item_data>
        </example_item>
    </examples>
