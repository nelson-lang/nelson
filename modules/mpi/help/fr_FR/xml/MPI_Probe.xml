    <language>fr_FR</language>
    <keyword>MPI_Probe</keyword>
    <short_description>Test bloquant pour un message.</short_description>
    <syntax>
        <syntax_item>[flag, stat, info] = MPI_Probe(rank, tag)</syntax_item>
        <syntax_item
    >[flag, stat, info] = MPI_Probe(rank, tag, comm)</syntax_item>
    </syntax>
    <param_input>
                <param_input_item>
                        <param_name>rank</param_name>
                        <param_description
      >entier : rang de la source.</param_description>
                </param_input_item>
                <param_input_item>
                        <param_name>tag</param_name>
                        <param_description
      >entier : étiquette (tag) du message.</param_description>
                </param_input_item>
        <param_input_item>
            <param_name>comm</param_name>
            <param_description>objet MPI_Comm.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>flag</param_name>
        <param_description
      >entier : 1 si le message est prêt à être reçu, 0 sinon.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>stat</param_name>
        <param_description
      >struct : rang source, tag du message, erreur, count, cancelled pour le message accepté.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>info</param_name>
        <param_description
      >entier : 0 (MPI_SUCCESS), toute autre valeur indique une erreur.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>Test bloquant pour vérifier la présence d'un message.</p>
    </description>
