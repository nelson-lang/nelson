      <tr>
        <td>Inférieur ou égal</td>
        <td>a &lt;= b</td>
        <td>le(a, b)</td>
      </tr>
      <tr>
        <td>Supérieur ou égal</td>
        <td>a &gt;= b</td>
        <td>ge(a, b)</td>
      </tr>
      <tr>
        <td>Différent</td>
        <td>a ~= b</td>
        <td>ne(a, b)</td>
      </tr>
      <tr>
        <td>Égalité</td>
        <td>a == b</td>
        <td>eq(a, b)</td>
      </tr>
      <tr>
        <td>ET logique</td>
        <td>a &amp; b</td>
        <td>and(a, b)</td>
      </tr>
      <tr>
        <td>OU logique</td>
        <td>a | b</td>
        <td>or(a, b)</td>
      </tr>
      <tr>
        <td>NON logique</td>
        <td>~a</td>
        <td>not(a)</td>
      </tr>
      <tr>
        <td>Opérateur deux-points</td>
        <td>a:d:b</td>
        <td>colon(a, d, b)</td>
      </tr>
      <tr>
        <td>Transposée conjuguée</td>
        <td>a'</td>
        <td>ctranspose(a)</td>
      </tr>
      <tr>
        <td>Transposée matricielle</td>
        <td>a.'</td>
        <td>transpose(a)</td>
      </tr>
      <tr>
        <td>Méthode d'affichage</td>
        <td>sortie fenêtre de commandes</td>
        <td>display(a)</td>
      </tr>
      <tr>
        <td>Concaténation horizontale</td>
        <td>[a, b]</td>
        <td>horzcat(a, b, ...)</td>
      </tr>
      <tr>
