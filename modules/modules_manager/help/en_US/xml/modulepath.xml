  <language>en_US</language>
  <keyword>modulepath</keyword>
  <short_description>Returns path of a module.</short_description>

  <syntax>
    <syntax_item>p = modulepath(module_short_name)</syntax_item>
    <syntax_item
    >p = modulepath(module_path, module_short_name, option)</syntax_item>
  </syntax>
  

  <param_input>
    <param_input_item>
      <param_name>module_path</param_name>
      <param_description>a string: existing path.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>module_short_name</param_name>
      <param_description>a string: short module's name.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>option</param_name>
      <param_description
      >a string: 'etc', 'bin', 'root', 'builtin'.</param_description>
    </param_input_item>

  </param_input>

  <param_output>
    <param_output_item>
      <param_name>p</param_name>
      <param_description
      >a string: path or subpath of the module.</param_description>
    </param_output_item>
  </param_output>


  <description><p><b
      >modulepath</b> is an helper's function to return module root path or a subdirectory.</p>
  </description>

  <used_function />
  <bibliography />

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[modulepath('core')
modulepath(nelsonroot(),'core','etc')
modulepath(nelsonroot(),'core','bin')
modulepath(nelsonroot(),'core','root')
modulepath(nelsonroot(),'core','builtin')]]>
    </example_item_data>
  </example_item>

</examples>

