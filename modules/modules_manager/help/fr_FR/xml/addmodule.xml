    <language>fr_FR</language>
    <keyword>addmodule</keyword>
    <short_description>Ajouter un module à Nelson.</short_description>
    <syntax>
        <syntax_item>addmodule(module_path, module_short_name)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>module_path</param_name>
        <param_description
      >chaîne : chemin racine d'un module. Le chemin doit exister.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>module_short_name</param_name>
        <param_description
      >chaîne : nom court du module. Ce nom ne doit pas être déjà utilisé.</param_description>
        </param_input_item>
    </param_input>
    <description>
        <p>
            <b
      >addmodule</b> enregistre un nouveau module identifié par son chemin et son nom court.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description
      >Voir le squelette de module pour un exemple</example_item_description>
                                <example_item_data
        runnable="cli"
      ><![CDATA[ismodule('module_skeleton')
addmodule([nelsonroot(), '/module_skeleton'], 'module_skeleton')
ismodule('module_skeleton')
removemodule('module_skeleton')]]></example_item_data>
            </example_item>
        </examples>
