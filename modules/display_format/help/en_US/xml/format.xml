	<language>en_US</language>
	<keyword>format</keyword>
	<short_description>Display format and number printing.</short_description>

	<syntax>
		<syntax_item>fmt = format()</syntax_item>
		<syntax_item>format()</syntax_item>
		<syntax_item>format(new_style)</syntax_item>
		<syntax_item>fmt = format('get')</syntax_item>

	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>new_style</param_name>
			<param_description>a string</param_description>
		</param_input_item>
	</param_input>

	<param_output>

		<param_output_item>
			<param_name>fmt</param_name>
			<param_description>a string: current format used</param_description>
		</param_output_item>
	</param_output>

	<description>
		<p><b>format(new_style)</b> changes the display format and number printing of the current session.</p>
		<p><b>format()</b> without output and input arguments will reset to default format (short).</p>

		<p>Current styles supported:</p>
		<p><b>short</b></p>
		<p><b>long</b></p>
		<p><b>shortE</b></p>
		<p><b>longE</b></p>
		<p><b>hex</b></p>

	</description>


	<used_function></used_function>
