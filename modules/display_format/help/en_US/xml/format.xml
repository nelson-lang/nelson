    <language>en_US</language>
    <keyword>format</keyword>
    <short_description>Display format and number printing.</short_description>
    <syntax>
        <syntax_item>fmt = format()</syntax_item>
        <syntax_item>format()</syntax_item>
        <syntax_item>format('default')</syntax_item>
        <syntax_item>format(new_style)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>new_style</param_name>
            <param_description>a string</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>fmt</param_name>
            <param_description
      >DisplayFormatOptions object: format used</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b
      >format(new_style)</b> changes the display format and number printing of the current session.</p>
            <p>
                <b
      >format('default')</b> will reset to default format (short, loose).</p>
                <p />
                <p>Styles supported:</p>
                <p>
                    <b>short</b>
                </p>
                <p>
                    <b>long</b>
                </p>
                <p>
                    <b>shortE</b>
                </p>
                <p>
                    <b>longE</b>
                </p>
                <p>
                    <b>shortEng</b>
                </p>
                <p>
                    <b>longEng</b>
                </p>
                <p>
                    <b>plus</b>
                </p>
                <p>
                    <b>rational</b>
                </p>
                <p>
                    <b>hex</b>
                </p>
                <p />
                <p>Line Spacing Format supported:</p>
                <p>
                    <b>loose</b>
                </p>
                <p>
                    <b>compact</b>
                </p>
            </description>
            <used_function />
            <bibliography />
            <examples>
                <example_item>
                    <example_item_type>nelson</example_item_type>
                    <example_item_description
      >an example</example_item_description>
                    <example_item_data
      ><![CDATA[current_style = format()
pi
format('short')
pi
format('long')
pi
format('shortE')
pi
format('longE')
pi
format('hex')
pi
format('+')
pi
format('rational')
pi
format('compact')
pi
format(current_style)
pi]]></example_item_data>
                </example_item>
            </examples>
