	<language>en_US</language>
	<keyword>formattedDisplayText</keyword>
	<short_description>Capture display output as string.</short_description>

	<syntax>
		<syntax_item>str = formattedDisplayText(V)</syntax_item>
		<syntax_item>str = formattedDisplayText(V, Name, Value)</syntax_item>	
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>V</param_name>
			<param_description>Variable to return as string</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>Name, Value</param_name>
			<param_description
      >Name-Value Pair Arguments, Name: 'NumericFormat' or 'LineSpacing'.</param_description>
		</param_input_item>
	</param_input>

	<param_output>
		<param_output_item>
			<param_name>str</param_name>
			<param_description>a string</param_description>
		</param_output_item>
	</param_output>

	<description>
		<p><b>str = formattedDisplayText(V)</b> returns the display output of <b
      >V</b> as a string.</p>
		<p>The string contains equivalent to <b>disp(V)</b>.</p>
	</description>


	<used_function />
	<bibliography />

<examples>
	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data
      ><![CDATA[R = eye(3, 3)
str = formattedDisplayText(R)		
R = rand(3, 3);
disp(R)
str = formattedDisplayText(R)
str = formattedDisplayText(R, 'NumericFormat', 'bank', 'LineSpacing', 'compact')]]>
		</example_item_data>
	</example_item>
</examples>

