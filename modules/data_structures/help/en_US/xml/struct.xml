	<language>en_US</language>
	<keyword>struct</keyword>
	<short_description>Creates a struct.</short_description>

	<syntax>
		<syntax_item>st = struct()</syntax_item>
		<syntax_item>st = struct([])</syntax_item>
		<syntax_item>st = struct(object)</syntax_item>
		<syntax_item>st = struct(field, value)</syntax_item>
		<syntax_item
    >st = struct(field, value, field2, value2, ..., fieldn, valuen)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>field, field2, ... , fieldn</param_name>
			<param_description
      >strings : field names, valid names are same than variable identifiers.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>value, value2, ..., valuen</param_name>
			<param_description>all data types supported by Nelson.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>object</param_name>
			<param_description>an object created with 'class' builtin.</param_description>
		</param_input_item>

	</param_input>

	<param_output>

		<param_output_item>
			<param_name>st</param_name>
			<param_description>a struct</param_description>
		</param_output_item>
	</param_output>

	<description>
		<p><b>struct</b> returns a structure.</p>
    </description>


	<used_function />
	<bibliography />

<examples>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data><![CDATA[struct()]]>
		</example_item_data>
	</example_item>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data><![CDATA[struct([])]]>
		</example_item_data>
	</example_item>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data
      ><![CDATA[date_st = struct('day', 15, 'month' ,'August','year', 1974)]]>
		</example_item_data>
	</example_item>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description
      >Other way to create a struct:</example_item_description>
		<example_item_data
      ><![CDATA[date_st.day = 15
date_st.month = 'August'
date_st.year = 1974)]]>
		</example_item_data>
	</example_item>

	
</examples>

