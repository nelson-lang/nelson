//=============================================================================
R = int8([1:5]).^2;
REF = int8([1    4    9   16   25]);
assert_isequal(R, REF);
//=============================================================================
R = int8([1:5]).^int8(2);
REF = int8([1    4    9   16   25]);
assert_isequal(R, REF);
//=============================================================================
R = [1:5].^int8(2);
REF = int8([1    4    9   16   25]);
assert_isequal(R, REF);
//=============================================================================
R = int8(128).^2;
REF = int8(127);
assert_isequal(R, REF);
//=============================================================================
assert_checkerror('R = int8(128).^0.5;', _('Positive integral powers expected.'));
//=============================================================================
assert_checkerror('R =  int8([1 2 3; 4 5 6; 7 8 9]).^-1;', _('Only positive integers expected.'));
