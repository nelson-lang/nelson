// <--GUI MODE--> 
//=============================================================================
matver = {'-v7', '-v7.3'};
//=============================================================================
h = warndlg();
REF = struct();
//=============================================================================
for v = matver
  test_file_mat = [tempdir(), '/test_save_handle', v{1}, '.mat'];
  savemat(test_file_mat, 'h', v{1});
  clear h;
  loadmat(test_file_mat);
  assert_isequal(h, REF);
end
//=============================================================================
l = lastwarn();
assert_isequal(l, _('handle not saved.'));
