	<language>en_US</language>
	<keyword>toeplitz</keyword>
	<short_description>Toeplitz matrix</short_description>

	<syntax>
		<syntax_item>T = toeplitz(c, r)</syntax_item>
		<syntax_item>T = toeplitz(r)</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>c</param_name>
			<param_description
      >a scalar or vector: column of Toeplitz matrix.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>r</param_name>
			<param_description
      >a scalar or vector: row of Toeplitz matrix.</param_description>
		</param_input_item>
	</param_input>

	<param_output>

		<param_output_item>
			<param_name>T</param_name>
			<param_description>Toeplitz matrix.</param_description>
		</param_output_item>
	</param_output>

	<description>
		<p><b>T = toeplitz(c, r)</b> returns the Toeplitz matrix whose first row is <b
      >r</b> and first column is <b>c</b>.</p>
		<p><b>T = toeplitz(c)</b> returns the symmetric Toeplitz matrix.</p>
	</description>

	<used_function />
	<bibliography>https://en.wikipedia.org/wiki/Toeplitz_matrix</bibliography>

