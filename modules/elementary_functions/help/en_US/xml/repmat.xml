  <language>en_US</language>
  <keyword>repmat</keyword>
  <short_description>Replicate and tile an array.</short_description>

  <syntax>
    <syntax_item>R = repmat(A, m)</syntax_item>
    <syntax_item>R = repmat(A, m, n)</syntax_item>
    <syntax_item>R = repmat(A, m, n, p …)</syntax_item>
    <syntax_item>R = repmat(A, [m n])</syntax_item>
    <syntax_item>R = repmat(A, [m n p …])</syntax_item>

  </syntax>
    <param_input>
    <param_input_item>
      <param_name>A</param_name>
      <param_description>an array.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>m, n, p …</param_name>
      <param_description>a value: integer</param_description>
    </param_input_item>

  </param_input>

  <param_output>
    <param_output_item>
      <param_name>R</param_name>
      <param_description>result array form by tiling.</param_description>
    </param_output_item>
  </param_output>

  <description><b>repmat</b> repeats matrix or N-D array.</description>

  <used_function />
  <bibliography />

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data><![CDATA[repmat(1:5, 2)]]>
    </example_item_data>
  </example_item>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data><![CDATA[repmat(1:5, [2 3])]]>
    </example_item_data>
  </example_item>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data><![CDATA[repmat(1:5, [2 3 4])]]>
    </example_item_data>
  </example_item>

</examples>

