  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data>
      <![CDATA[x = [1+i,-i;i,2i];
r = tril(x)]]>
    </example_item_data>
  </example_item>
</examples>

