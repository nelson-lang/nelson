  <language>en_US</language>
  <keyword>tril</keyword>
  <short_description>Lower triangular part of matrix</short_description>

  <syntax>
    <syntax_item>T = tril(M)</syntax_item>
    <syntax_item>T = tril(M, k)</syntax_item>
  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>M</param_name>
      <param_description>2D input matrix</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>k</param_name>
      <param_description
      >Diagonals to include: integer real value</param_description>
    </param_input_item>
  </param_input>

  <param_output>

    <param_output_item>
      <param_name>R</param_name>
      <param_description>Lower Triangular Portions of Matrix</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b>tril</b> computes Lower Triangular Portions of Matrix.</p>
    <p><b
      >R = tril(M, k)</b> returns the elements on and above the kth diagonal of M.</p>
  </description>


  <used_function />
