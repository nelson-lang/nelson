  <language>en_US</language>
  <keyword>dec2bin</keyword>
  <short_description>Convert decimal number to base 2.</short_description>

  <syntax>
    <syntax_item>R = dec2bin(D)</syntax_item>
    <syntax_item>R = dec2bin(D, N)</syntax_item>
  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>D</param_name>
      <param_description
      >a non negative integer smaller than the value returned by flintmax.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>N</param_name>
      <param_description>an integer value. number of digits.</param_description>
    </param_input_item>
 
  </param_input>

  <param_output>

    <param_output_item>
      <param_name>R</param_name>
      <param_description>result of dec2bin: char array.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b>dec2bin</b> converts decimal number to base 2.</p>
  </description>

