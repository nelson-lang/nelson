    <language>en_US</language>
    <keyword>ind2sub</keyword>
    <short_description
  >Linear index to matrix subscript values</short_description>
    <syntax>
        <syntax_item>[row, col] = ind2sub(sz, ind)</syntax_item>
        <syntax_item>[I1, I2, ..., In] = ind2sub(sz, ind)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>sz</param_name>
            <param_description
      >size of array: vector of positive integers.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>ind</param_name>
            <param_description>linear indices.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>row</param_name>
            <param_description>row subscripts.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>col</param_name>
            <param_description>column subscripts.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>I1, I2, ..., In</param_name>
            <param_description>multidimensional subscripts.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>ind2sub</b> converts linear indices to subscript.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[ind = [4 5 6 7];
sz = [4 4];
[row,col] = ind2sub(sz,ind)]]></example_item_data>
            </example_item>
        </examples>
        <see_also>
            <see_also_item>
                <link linkend="${elementary_functions}sub2ind">sub2ind</link>
            </see_also_item>
        </see_also>
