    <language>en_US</language>
    <keyword>size</keyword>
    <short_description>Size of an object.</short_description>
    <syntax>
        <syntax_item>s = size(X)</syntax_item>
        <syntax_item>sdim = size(X, dim)</syntax_item>
        <syntax_item>vec = size(X, dims)</syntax_item>
        <syntax_item>[r, c] = size(X)</syntax_item>
        <syntax_item>[s1, ... , sn] = size(X)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>X</param_name>
            <param_description>a variable</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>dim</param_name>
            <param_description
      >a variable: a positive integer to get the dimth dimension.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>dims</param_name>
            <param_description
      >a variable: a vector of  positive integer to get the dimth dimensions.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>s</param_name>
            <param_description
      > a row vector whose elements contain the length of the corresponding dimension of X.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>sdim</param_name>
            <param_description>the length of dimension dim.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>vec</param_name>
            <param_description>length of dimensions dims.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>[r, c]</param_name>
            <param_description>number of rows and columns.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>[s1, ... , sn]</param_name>
            <param_description>numbers with integer values.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p />
    </description>
