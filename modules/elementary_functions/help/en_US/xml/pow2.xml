  <language>en_US</language>
  <keyword>pow2</keyword>
  <short_description>Base 2 exponentiation and scaling of floating-point numbers.</short_description>

  <syntax>
    <syntax_item>Y = pow2(E)</syntax_item>
    <syntax_item>Y = pow2(X, E)</syntax_item>
  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>E</param_name>
      <param_description>Exponent values</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>X</param_name>
      <param_description>Significand values</param_description>
    </param_input_item>

  </param_input>

  <param_output>

    <param_output_item>
      <param_name>Y</param_name>
      <param_description>result of pow2.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b>Y = pow2(E)</b> computes 2 to the power of <b>E</b>.</p>
    <p><b>Y = pow2(X, E)</b> computes X times 2 to the power of <b>E</b>.</p>
  </description>

  <used_function></used_function>
