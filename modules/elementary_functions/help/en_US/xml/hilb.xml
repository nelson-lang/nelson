  <language>en_US</language>
  <keyword>hilb</keyword>
  <short_description>Hilbert matrix</short_description>

  <syntax>
    <syntax_item>h = invhilb(n)</syntax_item>
    <syntax_item>h = invhilb(n, className)</syntax_item>
  </syntax>
  
  <param_input>

    <param_input_item>
      <param_name>n</param_name>
      <param_description>a scalar, nonnegative integer.</param_description>
    </param_input_item>
 
    <param_input_item>
      <param_name>className</param_name>
      <param_description>'single' or 'double' (default).</param_description>
    </param_input_item>
 
  </param_input>

  <param_output>

    <param_output_item>
      <param_name>h</param_name>
      <param_description>Hilbert matrix.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b>hilb</b> computes the exact inverse of the exact Hilbert matrix.</p>
  </description>

  <used_function></used_function>
  <bibliography>https://en.wikipedia.org/wiki/David_Hilbert, and Thanks to https://nhigham.com/2020/06/30/what-is-the-hilbert-matrix/</bibliography>

