    <language>en_US</language>
    <keyword>flip</keyword>
    <short_description>Flip order of elements</short_description>
    <syntax>
        <syntax_item>B = flip(A, dim)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>A</param_name>
            <param_description>an array</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>dim</param_name>
            <param_description>an positive integer value</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>B</param_name>
            <param_description>flipped array.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>flip</b> return an new array of <b
      >A</b> flipped about the dimension <b>dim</b>.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[x = eye(3, 2);
y = flip(x, 1)
y = flip(x, 2)
y = flip(x, 3)]]></example_item_data>
            </example_item>
        </examples>
