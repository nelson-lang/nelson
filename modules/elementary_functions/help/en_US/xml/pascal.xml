    <language>en_US</language>
    <keyword>pascal</keyword>
    <short_description>Pascal's triangle</short_description>
    <syntax>
        <syntax_item>P = pascal(N)</syntax_item>
        <syntax_item>P = pascal(N)</syntax_item>
        <syntax_item>P = pascal(N, 1)</syntax_item>
        <syntax_item>P = pascal(N, 2)</syntax_item>
        <syntax_item>P = pascal(..., ClassName)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>N</param_name>
            <param_description
      >size of the Pascal's triangle.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>kind</param_name>
            <param_description>(optional) orientation of the triangle:
- 0 (default): upright,
- 1: flipped horizontally,
- 2: flipped vertically.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>ClassName</param_name>
            <param_description
      >(optional) data type of the resulting matrix (e.g., 'double', 'single').</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>R</param_name>
            <param_description
      >resulting Pascal's triangle matrix.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>pascal</b> generates a Pascal's triangle matrix of size N x N.
        </p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[pascal(3)
      pascal(4, 1)
      pascal(5, 2)]]></example_item_data>
            </example_item>
        </examples>
