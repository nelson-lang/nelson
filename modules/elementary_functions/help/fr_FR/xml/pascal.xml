    <language>fr_FR</language>
    <keyword>pascal</keyword>
    <short_description>Triangle de Pascal</short_description>
    <syntax>
        <syntax_item>P = pascal(N)</syntax_item>
        <syntax_item>P = pascal(N, 1)</syntax_item>
        <syntax_item>P = pascal(N, 2)</syntax_item>
        <syntax_item>P = pascal(..., ClassName)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>N</param_name>
            <param_description>taille du triangle de Pascal.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>kind</param_name>
            <param_description>(optionnel) orientation du triangle :
- 0 (par défaut) : droit,
- 1 : retourné horizontalement,
- 2 : retourné verticalement.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>ClassName</param_name>
            <param_description
      >(optionnel) type de données de la matrice résultante (par exemple, 'double', 'single').</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>R</param_name>
            <param_description
      >matrice résultante du triangle de Pascal.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b
      >pascal</b> génère une matrice du triangle de Pascal de taille N x N.
        </p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[pascal(3)
      pascal(4, 1)
      pascal(5, 2)]]></example_item_data>
            </example_item>
        </examples>
