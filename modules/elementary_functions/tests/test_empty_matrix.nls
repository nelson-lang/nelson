//=============================================================================
R = [11 21 31;31 41 51;41 51 61];
R(:, [1:3]) = [];
assert_isequal(size(R), [3 0]);
assert_istrue(isempty(R));
//=============================================================================
R = [11 21 31;31 41 51;41 51 61];
R(:,[1:end]) = [];
assert_isequal(size(R), [3 0]);
assert_istrue(isempty(R));
//=============================================================================
R = [11 21 31;31 41 51;41 51 61];
R([1:2], :) = [];
REF = [41 51 61];
assert_isequal(R, REF);
//=============================================================================
R = [11 21 31;31 41 51;41 51 61];
assert_checkerror('R(:,[1:4]) = [];', _('Matrix index is out of range.')); 
//=============================================================================
R = [11 21 31 41];
//=============================================================================
R([]) = [];
REF = [11 21 31 41];
assert_isequal(R, REF);
//=============================================================================
R([]) = 14;
REF = [11 21 31 41];
assert_isequal(R, REF);
//=============================================================================
R([], []) = 69;
REF = [11 21 31 41];
assert_isequal(R, REF);
//=============================================================================
R([]) = 141i;
REF = [11 21 31 41];
assert_isequal(R, REF);
//=============================================================================
