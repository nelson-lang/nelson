//=============================================================================
R(1, []) = [619];
REF = [11 21 31 41];
assert_isequal(R, REF);
//=============================================================================
R(1, []) = 619i;
REF = [11 21 31 41];
assert_isequal(R, REF);
//=============================================================================
R([], 1) = 619i;
REF = [11 21 31 41];
assert_isequal(R, REF);
//=============================================================================
R(1, []) = 1 + 619i;
REF = [11 21 31 41];
assert_isequal(R, REF);
