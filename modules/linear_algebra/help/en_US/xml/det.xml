    <language>en_US</language>
    <keyword>det</keyword>
    <short_description>Matrix determinant.</short_description>
    <syntax>
        <syntax_item>res = det(x)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>x</param_name>
            <param_description
      >a numeric value: scalar or square matrix (double or single)</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>res</param_name>
            <param_description
      >real or complex number (double or single), the determinant base 10.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>res = det(x)</b> returns the determinant of square matrix x.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[A = [10 -20 40; -50 20 0; 10 0 30]
D = det(A)
]]></example_item_data>
            </example_item>
        </examples>
