  <language>en_US</language>
  <keyword>trace</keyword>
  <short_description>Matrix trace.</short_description>

  <syntax>
    <syntax_item>res = trace(x)</syntax_item>
  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>x</param_name>
      <param_description
      >a numeric value: scalar or matrix (double or single)</param_description>
    </param_input_item>
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>res</param_name>
      <param_description>a numeric value: a scalar</param_description>
    </param_output_item>
  </param_output>

  <description>
  <p><b
      >trace(x)</b> computes the trace of x, the sum of the elements along the main diagonal.</p>
  </description>

  <used_function />
  <bibliography />

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data><![CDATA[X = [1 0; 0 3];
Y = trace(X)]]>
    </example_item_data>
  </example_item>

</examples>


