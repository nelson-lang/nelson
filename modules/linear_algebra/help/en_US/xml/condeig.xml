  <language>en_US</language>
  <keyword>condeig</keyword>
  <short_description
  >Condition number with respect to eigenvalues.</short_description>

  <syntax>
  <syntax_item>C = condeig(A)</syntax_item>
  <syntax_item>[V, D, S] = condeig(A)</syntax_item>
  </syntax>

  <param_input>
    <param_input_item>
      <param_name>A</param_name>
      <param_description>Input matrix</param_description>
    </param_input_item>
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>C</param_name>
      <param_description
      >a vector of condition numbers for the eigenvalues of A.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b
      >C = condeig(A)</b> returns a vector of condition numbers for the eigenvalues of <b
      >A</b>.</p>
  </description>

  <used_function />
  <bibliography />
<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data><![CDATA[A = [10, 20; 30, 40];
S = condeig(A)]]>
    </example_item_data>
  </example_item>
</examples>

