  <language>en_US</language>
  <keyword>planerot</keyword>
  <short_description>Givens plane rotation.</short_description>

  <syntax>
    <syntax_item>[G, Y] = planerot(X)</syntax_item>
  </syntax>
  
  <param_input>
    <param_input_item>
      <param_name>X</param_name>
      <param_description>two-element column vector.</param_description>
    </param_input_item>
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>G</param_name>
      <param_description>2 by 2 orthogonal matrix.</param_description>
    </param_output_item>
    <param_output_item>
      <param_name>Y</param_name>
      <param_description>Y = G * X with Y(2) = 0.</param_description>
    </param_output_item>

  </param_output>

  <description>
    <p><b
      >[G, Y] = planerot(X)</b> computes the Givens rotation matrix for the two-element column vector <b
      >X</b>.</p>
  </description>

  <used_function />
  <bibliography />

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data><![CDATA[X = [4; 5];
[G, X] = planerot(X)
]]>
    </example_item_data>
  </example_item>

</examples>

