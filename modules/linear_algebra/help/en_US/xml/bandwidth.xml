  <language>en_US</language>
  <keyword>bandwidth</keyword>
  <short_description>Lower and upper matrix bandwidth.</short_description>

  <syntax>
  <syntax_item>[lower, upper] = bandwidth(A)</syntax_item>
  <syntax_item>R = bandwidth(A, type)</syntax_item>
  </syntax>

  <param_input>
    <param_input_item>
      <param_name>A</param_name>
      <param_description>Input matrix</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>type</param_name>
      <param_description>'upper' or 'lower'</param_description>
    </param_input_item>

  </param_input>

  <param_output>
    <param_output_item>
      <param_name>lower, upper</param_name>
      <param_description>lower bandwidth, <b>lower</b>, and upper bandwidth, <b
        >upper</b>, of matrix <b>A</b>.</param_description>
    </param_output_item>

    <param_output_item>
      <param_name>R</param_name>
      <param_description>lower or upper bandwidth.</param_description>
    </param_output_item>

  </param_output>

  <description>
    <p><b>[lower, upper] = bandwidth(A)</b> returns <b>lower</b> and <b
      >upper</b> bandwidths of matrix <b>A</b>.</p>
  </description>

  <used_function />
  <bibliography />
<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[M = [10 -20 40; -50 20 0; 10 0 30]
[lower, upper] = bandwidth(M)
]]>
    </example_item_data>
  </example_item>
</examples>

