    <language>fr_FR</language>
    <keyword>close</keyword>
    <short_description>Ferme une ou plusieurs figures</short_description>
    <syntax>
        <syntax_item>close()</syntax_item>
        <syntax_item>close('all')</syntax_item>
        <syntax_item>close(name)</syntax_item>
        <syntax_item>close(ID)</syntax_item>
        <syntax_item>close(GO)</syntax_item>
        <syntax_item>tf = close(...)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
        <param_name>ID</param_name>
        <param_description
      >une valeur entière scalaire : identifiant de la figure.</param_description>
        </param_input_item>
        <param_input_item>
        <param_name>GO</param_name>
        <param_description
      >un objet graphique scalaire sur une figure existante.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>GO</param_name>
            <param_description
      >a scalar graphics object on an existing figure.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
                <param_output_item>
                        <param_name>tf</param_name>
                        <param_description
      >un scalaire logique : true si la figure a été fermée.</param_description>
                </param_output_item>
    </param_output>
    <description>
        <p>
            <b>close</b> ferme la figure courante.</p>
            <p>
                <b
      >close(ID)</b> ferme la figure spécifiée par l'identifiant.</p>
                <p>
                    <b
      >close(GO)</b> ferme la figure spécifiée par l'objet graphique de la figure.</p>
                    <p>
                        <b>close('all')</b> ferme toutes les figures.</p>
                    </description>
                    <used_function />
                    <bibliography />
                    <examples>
                        <example_item>
                            <example_item_type>nelson</example_item_type>
                            <example_item_description />
                            <example_item_data
        runnable="adv-cli"
      ><![CDATA[f = figure(1)
close();
h = figure(3)
close(h)
f1 = figure()
f2 = figure()
close('all')]]></example_item_data>
                        </example_item>
                    </examples>
