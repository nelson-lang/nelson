  <language>en_US</language>
  <keyword>xlim</keyword>
  <short_description>set or get x-axis limits.</short_description>

  <syntax>
   <syntax_item>lims = xlim()</syntax_item>
   <syntax_item>xlim([xmin, xmax])</syntax_item>   
   <syntax_item>xlim('auto')</syntax_item>
   <syntax_item>xlim('manual')</syntax_item>
   <syntax_item>m = xlim('mode')</syntax_item>
   <syntax_item>xlim(ax, ...)</syntax_item>
  </syntax>
	
	<param_input>
		<param_input_item>
			<param_name>[xmin, xmax]</param_name>
			<param_description>x-coordinates: vector or matrix.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>'auto'</param_name>
			<param_description>enable automatic limit selection.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>'manual'</param_name>
			<param_description
      >freeze the x-axis limits at their current value.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>'mode'</param_name>
			<param_description>returns the current x-axis limits mode.</param_description>
		</param_input_item>
		<param_input_item>
			<param_name>ax</param_name>
			<param_description
      >a scalar graphics object value: parent container, specified as a axes.</param_description>
		</param_input_item>

	</param_input>

  <param_output>
    <param_output_item>
      <param_name>lims</param_name>
      <param_description>two-element vector: [xmin, xmax]</param_description>
    </param_output_item>
    <param_output_item>
      <param_name>m</param_name>
      <param_description>'auto' or 'manual'.</param_description>
    </param_output_item>

  </param_output>
<description>
<p><b>xlim</b> get or set the limits of the x-axis for the current plot.</p>
</description>
  <used_function />
  <bibliography />
  
<examples>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[x = linspace(-1, 1);
y = sin(2*pi*x);
plot(x, y);
lim = xlim()
m = xlim('mode')
]]>
    </example_item_data>
  </example_item>
</examples>

