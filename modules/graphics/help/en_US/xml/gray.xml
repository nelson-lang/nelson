    <keyword>gray</keyword>
    <short_description>Gray colormap array.</short_description>
    <syntax>
        <syntax_item>c = gray</syntax_item>
        <syntax_item>c = gray(m)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>m</param_name>
            <param_description
      >a scalar integer value: Number of colors (256 as default value).</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>c</param_name>
            <param_description>Gray colormap array.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>gray</b> returns the colormap with gray colors.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[f = figure();
surf(peaks);
colormap('gray');]]></example_item_data>
                <example_item_img src="../images/gray.svg" align="middle" />
            </example_item>
        </examples>
