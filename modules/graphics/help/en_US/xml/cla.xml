  <language>en_US</language>
  <keyword>cla</keyword>
  <short_description>Clear axes.</short_description>

  <syntax>
  <syntax_item>cla</syntax_item>
  <syntax_item>cla(ax)</syntax_item>
  <syntax_item>ca = cla(...)</syntax_item>
  </syntax>

	<param_input>
    <param_input_item>
			<param_name>ax</param_name>
			<param_description
      >a scalar graphics object on an existing axes.</param_description>
		</param_input_item>
	</param_input>

  <param_output>

    <param_output_item>
      <param_name>ca</param_name>
      <param_description
      >a graphics object: used axes graphics object.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b>cla</b> clears the current axes.</p>
  </description>

  <used_function />
  <bibliography />
  
<examples>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[f = figure();
x = linspace(0, 2*pi);
y = sin(3 * x);
plot(x, y)
sleep(5)
cla]]>
    </example_item_data>
  </example_item>

</examples>
