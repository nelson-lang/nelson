    <language>en_US</language>
    <keyword>rgbplot</keyword>
    <short_description>Plot colormap.</short_description>
    <syntax>
        <syntax_item>rgbplot(cmap)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>cmap</param_name>
            <param_description
      >Colormap: three-column matrix of RGB triplets .</param_description>
        </param_input_item>
    </param_input>
    <description>
        <p>
            <b
      >rgbplot(cmap)</b> plots the R (red), G (green), and B (blue) intensities of the specified <b
      >cmap</b> colormap.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="adv-cli"
      ><![CDATA[f  = figure();
colormap = [0.2 0.1 0.5;
    0.1 0.5 0.8;
    0.2 0.7 0.6;
    0.8 0.7 0.3;
    0.9 1 0];
rgbplot(colormap);]]></example_item_data>
                <example_item_img
        src="../../images/rgbplot.svg"
        align="middle"
        generate="true"
      />
            </example_item>
        </examples>
