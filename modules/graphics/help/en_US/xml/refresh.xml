  <keyword>refresh</keyword>
  <short_description>Redraw current figure.</short_description>

 <syntax>
   <syntax_item>refresh()</syntax_item>
  <syntax_item>refresh(F)</syntax_item>
 </syntax>
	
	<param_input>
		<param_input_item>
			<param_name>F</param_name>
			<param_description> figure graphics object.</param_description>
