    <language>en_US</language>
    <keyword>colormap</keyword>
    <short_description>View and set current colormap.</short_description>
    <syntax>
        <syntax_item>colormap(map)</syntax_item>
        <syntax_item>colormap(target ,map)</syntax_item>
        <syntax_item>cmap = colormap()</syntax_item>
        <syntax_item>cmap = colormap(target) </syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>map</param_name>
            <param_description
      >colormap name, 'default' or RGB triplets (matrix).</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>target</param_name>
            <param_description>Target: figure or axes.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>cmap</param_name>
            <param_description
      >Colormap values: RGB triplets (matrix).</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b
      >colormap</b>allows to view and set the colormap used into a plot.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[f = figure()
x = linspace(-1, 1, 1024)' * ones(1, 1024);
y = x';
Z = exp(-(x .^ 2 + y .^ 2) / 0.4);
imagesc(Z);
colormap('summer')
]]></example_item_data>
                <example_item_img
        src="../images/colormap_1.svg"
        align="middle"
        generate="true"
      />
            </example_item>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[f = figure()
x = linspace(-1, 1, 1024)' * ones(1, 1024);
y = x';
Z = exp(-(x .^ 2 + y .^ 2) / 0.4);
imagesc(Z);
colormap('gray')]]></example_item_data>
                <example_item_img
        src="../images/colormap_2.svg"
        align="middle"
        generate="true"
      />
            </example_item>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[f = figure()
x = linspace(-1, 1, 1024)' * ones(1, 1024);
y = x';
Z = exp(-(x .^ 2 + y .^ 2) / 0.4);
imagesc(Z);

map = [0 0 0.3;
    0 0 0.4;
    0 0 0.5;
    0 0 0.6;
    0 0 0.8;
    0 0 1.0];
colormap(map)]]></example_item_data>
                <example_item_img
        src="../images/colormap_3.svg"
        align="middle"
        generate="true"
      />
            </example_item>
        </examples>
