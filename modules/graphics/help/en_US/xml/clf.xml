    <language>en_US</language>
    <keyword>clf</keyword>
    <short_description>Clear figure.</short_description>
    <syntax>
        <syntax_item>clf</syntax_item>
        <syntax_item>clf(f)</syntax_item>
        <syntax_item>F = clf(...)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>f</param_name>
            <param_description
      >a scalar graphics object on an existing figure.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>F</param_name>
            <param_description
      >a graphics object: used figure graphics object.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>clf</b> clears the current figure.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="adv-cli"
      ><![CDATA[f = figure();
x = linspace(0, 2*pi);
y = sin(3 * x);
plot(x, y)
sleep(5)
clf]]></example_item_data>
            </example_item>
        </examples>
