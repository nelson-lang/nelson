  <language>en_US</language>
  <keyword>ylim</keyword>
  <short_description>set or get y-axis limits.</short_description>
  <syntax>
    <syntax_item>lims = ylim()</syntax_item>
    <syntax_item>ylim([ymin, ymax])</syntax_item>
    <syntax_item>ylim('auto')</syntax_item>
    <syntax_item>ylim('manual')</syntax_item>
    <syntax_item>m = ylim('mode')</syntax_item>
    <syntax_item>ylim(ax, ...)</syntax_item>
  </syntax>
  <param_input>
    <param_input_item>
      <param_name>[ymin, ymax]</param_name>
      <param_description>y-coordinates: vector or matrix.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>'auto'</param_name>
      <param_description>enable automatic limit selection.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>'manual'</param_name>
      <param_description
      >freeze the y-axis limits at their current value.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>'mode'</param_name>
      <param_description
      >returns the current y-axis limits mode.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>ax</param_name>
      <param_description
      >a scalar graphics object value: parent container, specified as a axes.</param_description>
    </param_input_item>
  </param_input>
  <param_output>
    <param_output_item>
      <param_name>lims</param_name>
      <param_description>two-element vector: [ymin, ymax]</param_description>
    </param_output_item>
    <param_output_item>
      <param_name>m</param_name>
      <param_description>'auto' or 'manual'.</param_description>
    </param_output_item>
  </param_output>
  <description>
    <p><b>ylim</b> get or set the limits of the y-axis for the current plot.</p>
  </description>
  <used_function />
  <bibliography />
  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="adv-cli"
      ><![CDATA[x = linspace(-1, 1);
y = sin(2*pi*x);
plot(x, y);
lim = ylim()
m = ylim('mode')
]]></example_item_data>
    </example_item>
  </examples>
