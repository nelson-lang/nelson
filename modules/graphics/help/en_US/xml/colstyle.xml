    <language>en_US</language>
    <keyword>colstyle</keyword>
    <short_description>Parse color and style from string.</short_description>
    <syntax>
        <syntax_item
    >[linespec, colorspec, markerspec, msg] = colstyle (str)</syntax_item>
        <syntax_item
    >[linespec, colorspec, markerspec, msg] = colstyle (str, 'plot')</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>str</param_name>
            <param_description
      >a row vector of character or scalar string:  line specification.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>'plot'</param_name>
            <param_description
      >linespec returns 'none' and not '' with this option.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>linespec</param_name>
            <param_description>a string: line type.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>colorspec</param_name>
            <param_description>a string: color part.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>markerspec</param_name>
            <param_description>a string: marker part.</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>msg</param_name>
            <param_description
      >a string: contain the error message string.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b>colstyle</b> parses color and style from string.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[[l, c, m, msg] = colstyle('r:x')
[l, c, m, msg] = colstyle('*')
[l, c, m, msg] = colstyle('*', 'plot')]]></example_item_data>
            </example_item>
        </examples>
        <see_also>
            <see_also_item>
                <link linkend="${graphics}colormap">colormap</link>
            </see_also_item>
        </see_also>
