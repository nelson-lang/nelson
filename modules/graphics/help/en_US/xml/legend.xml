<examples>

  <example_item>

    <example_item_type>nelson</example_item_type>
    <example_item_description> 

    </example_item_description>
    <example_item_data
      ><![CDATA[f = figure();
x = linspace(0,10);
y1 = sin(x);
y2 = cos(x);
ax = gca();
plot(ax, x, y1);
plot(ax, x, y2);
legend('sin(x)', 'cos(x)', 'Location', 'N')]]>
    </example_item_data>
    <example_item_img src="../images/legend.svg" align="middle" />
  </example_item>
 
</examples>

