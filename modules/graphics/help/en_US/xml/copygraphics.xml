  <language>en_US</language>
  <keyword>copygraphics</keyword>
  <short_description>Copy plot to clipboard.</short_description>

  <syntax>
    <syntax_item>copygraphics(fig)</syntax_item>
  </syntax>
	
	<param_input>
		<param_input_item>
			<param_name>fig</param_name>
			<param_description>figure object.</param_description>
		</param_input_item>
	</param_input>


<description>
  <p><b>copygraphics</b> copy figure to clipboard.</p>
</description>


  <used_function />
  <bibliography />
  
<examples>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[x = -2:0.25:2;
y = x;
[X,Y] = meshgrid(x);
F = X.*exp(-X.^2-Y.^2);
surf(X,Y,F);
copygraphics(gcf());
]]>
    </example_item_data>
  </example_item>

</examples>

