  <language>en_US</language>
  <keyword>clim</keyword>
  <short_description>Set colormap limits.</short_description>
  <syntax>
    <syntax_item>clim(limits)</syntax_item>
    <syntax_item>clim('auto')</syntax_item>
    <syntax_item>clim('manual')</syntax_item>
    <syntax_item>clim(ax, ...)</syntax_item>
    <syntax_item>lims = clim()</syntax_item>
  </syntax>
  <param_input>
    <param_input_item>
      <param_name>limits</param_name>
      <param_description>New limits: [cmin cmax].</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>'auto'</param_name>
      <param_description
      >enables automatic limit updates when values in the colormap indexing array change.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>'manual'</param_name>
      <param_description>disables automatic limit update.</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>ax</param_name>
      <param_description
      >Target object: axes graphics object.</param_description>
    </param_input_item>
  </param_input>
  <param_output>
    <param_output_item>
      <param_name>lims</param_name>
      <param_description>[cmin cmax]</param_description>
    </param_output_item>
  </param_output>
  <description>
    <p><b>clim</b> set or get colormap limits.</p>
  </description>
  <used_function />
  <bibliography />
  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="adv-cli"
      ><![CDATA[f = figure();
[X,Y] = meshgrid(-5:.5:5);
Z = X .^ 2 + Y .^ 2;
surf(Z);
limits = clim()
]]></example_item_data>
      <example_item_img
        src="../../images/clim_1.svg"
        align="middle"
        generate="true"
      />
    </example_item>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="adv-cli"
      ><![CDATA[f = figure();
[X,Y] = meshgrid(-5:.5:5);
Z = X.^2 + Y.^2;
surf(Z);
clim([25 75])
limits = clim()
]]></example_item_data>
      <example_item_img
        src="../../images/clim_2.svg"
        align="middle"
        generate="true"
      />
    </example_item>
  </examples>
