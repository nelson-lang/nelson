        <examples>
                <example_item>
                        <example_item_type>nelson</example_item_type>
                        <example_item_description />
                        <example_item_data
        runnable="adv-cli"
      ><![CDATA[f = figure(1)
g = figure(2)
h = figure(3)
figure(g)
gcf()
figure('Name', 'Hello')
]]></example_item_data>
                </example_item>
        </examples>
