  <language>en_US</language>
  <keyword>sphere</keyword>
  <short_description>Create sphere.</short_description>

  <syntax>
    <syntax_item>[X, Y, Z] = sphere()</syntax_item>
    <syntax_item>[X, Y, Z] = sphere(n)</syntax_item>
    <syntax_item>sphere()</syntax_item>
    <syntax_item>sphere(n)</syntax_item>
    <syntax_item>sphere(ax, n)</syntax_item>
  </syntax>
	
	<param_input>
 		<param_input_item>
			<param_name>n</param_name>
			<param_description>Number of points: positive whole number.</param_description>
		</param_input_item>
    		<param_input_item>
			<param_name>ax</param_name>
			<param_description>Target axes: 'axes' object.</param_description>
		</param_input_item>
	</param_input>

  <param_output>
    <param_output_item>
      <param_name>X, Y, Z</param_name>
      <param_description
      > x-, y-, and z- coordinates of a sphere without drawing it.</param_description>
    </param_output_item>
  </param_output>

<description>
<p><b>sphere</b> creates sphere and plots it.</p>
</description>


  <used_function />
  <bibliography />
  
<examples>

  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[f = figure();
colormap(gray);
subplot(1, 3, 1);
ax1 = gca();
sphere(ax1);
axis equal
title(_('20-by-20 faces (Default)'));
subplot(1, 3, 2);
ax2 = gca();
sphere(ax2, 50);
axis equal
title(_('50-by-50 faces'));
subplot(1, 3, 3);
ax3 = gca();
sphere(ax3,100);
axis equal
title(_('100-by-100 faces'));]]>
    </example_item_data>
    <example_item_img src="../images/sphere.svg" align="middle" />
  </example_item>


</examples>

