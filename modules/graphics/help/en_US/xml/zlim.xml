    <language>en_US</language>
    <keyword>zlim</keyword>
    <short_description>set or get z-axis limits.</short_description>
    <syntax>
        <syntax_item>lims = zlim()</syntax_item>
        <syntax_item>zlim([zmin, zmax])</syntax_item>
        <syntax_item>zlim('auto')</syntax_item>
        <syntax_item>zlim('manual')</syntax_item>
        <syntax_item>m = zlim('mode')</syntax_item>
        <syntax_item>zlim(ax, ...)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>[zmin, zmax]</param_name>
            <param_description
      >z-coordinates: vector or matrix.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>'auto'</param_name>
            <param_description
      >enable automatic limit selection.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>'manual'</param_name>
            <param_description
      >freeze the z-axis limits at their current value.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>'mode'</param_name>
            <param_description
      >returns the current z-axis limits mode.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>ax</param_name>
            <param_description
      >a scalar graphics object value: parent container, specified as a axes.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>lims</param_name>
            <param_description
      >two-element vector: [zmin, zmax]</param_description>
        </param_output_item>
        <param_output_item>
            <param_name>m</param_name>
            <param_description>'auto' or 'manual'.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b
      >zlim</b> get or set the limits of the z-axis for the current plot.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="adv-cli"
      ><![CDATA[x = linspace(-1, 1);
y = sin(2*pi*x);
plot(x, y);
lim = zlim()
m = zlim('mode')
]]></example_item_data>
            </example_item>
        </examples>
