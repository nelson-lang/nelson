	<language>en_US</language>
	<keyword>lyap</keyword>
  <short_description>Continuous Lyapunov equation solution.</short_description>

  <syntax>
    <syntax_item>X = lyap(A, Q)</syntax_item>
  </syntax>

  <param_input>
    <param_input_item>
      <param_name>A</param_name>
      <param_description>real matrix</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>Q</param_name>
      <param_description>real matrix</param_description>
    </param_input_item>

  </param_input>

  <param_output>
     <param_output_item>
      <param_name>X</param_name>
      <param_description
      >matrix: solution of the Lyapunov equation.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b>X = lyap(A, Q)</b> resolves the Lyapunov equation.</p>
  </description>

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[A = [10, 20; -30, -40];
Q = [30, 10; 10, 10];
X = lyap (A, Q)]]>
    </example_item_data>
  </example_item>
</examples>

