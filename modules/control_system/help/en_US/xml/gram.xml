	<keyword>gram</keyword>
  <short_description
  >Controllability and observability Gramians.</short_description>

  <syntax>
    <syntax_item>wc = gram(sys, 'o')</syntax_item>
    <syntax_item>wc = gram(sys, 'c')</syntax_item>
  </syntax>

  <param_input>
    <param_input_item>
      <param_name>sys</param_name>
      <param_description>state-space model.</param_description>
    </param_input_item>
  </param_input>

  <param_output>
     <param_output_item>
      <param_name>wc</param_name>
      <param_description
      >observability or controllability Gramian.</param_description>
    </param_output_item>
  </param_output>

  <description>
  </description>

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
      ><![CDATA[sys = ss([-.1 -1;1 0], [1;0], [0 1], 0);
wc = gram(sys, 'c')
wc = gram(sys, 'o')
]]>
    </example_item_data>
  </example_item>
</examples>

