  <language>fr_FR</language>
  <keyword>lyap</keyword>
  <short_description
  >Solution de l'équation de Lyapunov continue.</short_description>
  <syntax>
    <syntax_item>X = lyap(A, Q)</syntax_item>
  </syntax>
  <param_input>
    <param_input_item>
      <param_name>A</param_name>
      <param_description>matrice réelle</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>Q</param_name>
      <param_description>matrice réelle</param_description>
    </param_input_item>
  </param_input>
  <param_output>
    <param_output_item>
      <param_name>X</param_name>
      <param_description
      >matrice : solution de l'équation de Lyapunov.</param_description>
    </param_output_item>
  </param_output>
  <description>
    <p
    >Résout l'équation de Lyapunov continue A'X + XA = -Q pour X donné A et Q.</p>
  </description>
  <examples>
    <example_item>
      <example_item_type>nelson</example_item_type>
      <example_item_description />
      <example_item_data
        runnable="cli"
      ><![CDATA[A = [10, 20; -30, -40];
Q = [30, 10; 10, 10];
X = lyap (A, Q)]]></example_item_data>
    </example_item>
  </examples>
