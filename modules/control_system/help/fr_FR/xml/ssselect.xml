	<language>fr_FR</language>
	<keyword>ssselect</keyword>
  <short_description
  >Extraire un sous-système d'un système plus grand.</short_description>

  <syntax>
    <syntax_item>sysOut = ssselect(sysIn, INPUTS, OUTPUTS)</syntax_item>
    <syntax_item>sysOut = ssselect(sysIn, INPUTS, OUTPUTS, STATES)</syntax_item>
  </syntax>

  <param_input>
    <param_input_item>
      <param_name>sysIn</param_name>
      <param_description>modèle d'état-espace</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>INPUTS</param_name>
      <param_description>index dans les entrées du système</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>OUTPUTS</param_name>
      <param_description>index dans les sorties du système</param_description>
    </param_input_item>
    <param_input_item>
      <param_name>STATES</param_name>
      <param_description>états spécifiés</param_description>
    </param_input_item>
  </param_input>

  <param_output>
    <param_output_item>
      <param_name>sysOut</param_name>
      <param_description
      >modèle d'état-espace : sous-système d'un système plus grand.</param_description>
    </param_output_item>
  </param_output>

  <description>
    <p><b
      >ssselect</b> extrait un sous-système à partir d'un système plus grand.</p>
  </description>

<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
        runnable="cli"
      ><![CDATA[A = [33,2,5; 23,200,2; 9,2,45];
B = [4,5; 12,5; 82,1];
C = [34,56,2; 6,2,112];
