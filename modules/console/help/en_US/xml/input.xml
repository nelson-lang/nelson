	<language>en_US</language>
	<keyword>input</keyword>
	<short_description>Display prompt and wait for user input.</short_description>

	<syntax>
		<syntax_item>r = input(prompt_str)</syntax_item>
		<syntax_item>r = input(prompt_str, 's')</syntax_item>
	</syntax>
	
	<param_input>
		<param_input_item>
			<param_name>prompt_str</param_name>
			<param_description>a string: temp. prompt displayed</param_description>
		</param_input_item>
	</param_input>

	<param_output>

		<param_output_item>
			<param_name>r</param_name>
			<param_description>a string</param_description>
		</param_output_item>
	</param_output>

	<description><p
    >Display prompt and wait for user input. input returns a string which is the expression entered at keyboard.</p>
</description>


	<used_function />
	<bibliography />
	
<examples>

	<example_item>
		<example_item_type>nelson</example_item_type>
		<example_item_description />
		<example_item_data
      ><![CDATA[res = input('Please input a value ', 's');
r = execstr(['A = ', res, ';'], 'errcatch');
if (r)
  disp('It was a value.');
  disp(A)
else
 disp('It was NOT a value.');
end]]>
		</example_item_data>
	
	</example_item>

</examples>

