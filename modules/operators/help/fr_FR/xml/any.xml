        <language>fr_FR</language>
        <keyword>any</keyword>
        <short_description
  >Vérifie si au moins un élément d'une matrice satisfait une condition.</short_description>
    <syntax>
        <syntax_item>R = any(M)</syntax_item>
        <syntax_item>R = any(M, dim)</syntax_item>
        <syntax_item>R = any(M, 'all')</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>M</param_name>
            <param_description>une matrice.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>dim</param_name>
            <param_description
      >entier : dimension sur laquelle opérer.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>'all'</param_name>
            <param_description>teste tous les éléments de M.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>R</param_name>
            <param_description>matrice logique.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p><b
      >any</b> renvoie vrai si au moins un élément d'une matrice satisfait une condition.</p>
    </description>
        <used_function />
        <bibliography />
