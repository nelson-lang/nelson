    <language>en_US</language>
    <keyword>any</keyword>
    <short_description
  >any of the elements of a matrix satisfy some condition.</short_description>
    <syntax>
        <syntax_item>R = any(M)</syntax_item>
        <syntax_item>R = any(M, dim)</syntax_item>
        <syntax_item>R = any(M, 'all')</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>M</param_name>
            <param_description>a matrix.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>dim</param_name>
            <param_description
      >a integer value: dimension along it works.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>'all'</param_name>
            <param_description>tests over all elements of M.</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>R</param_name>
            <param_description>a logical matrix.</param_description>
        </param_output_item>
    </param_output>
    <description>
        <p>
            <b
      >any</b> returns true if any of the elements of a matrix satisfy some condition.</p>
        </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
      ><![CDATA[any([33, 22; 11, 0])
any([33, 22; 11, 0], 2)]]></example_item_data>
            </example_item>
        </examples>
        <see_also>
            <see_also_item>
                <link linkend="${logical}all">all</link>
            </see_also_item>
        </see_also>
