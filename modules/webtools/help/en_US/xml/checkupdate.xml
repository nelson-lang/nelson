  <language>en_US</language>
  <keyword>checkupdate</keyword>
  <short_description>Check update for Nelson's application</short_description>

  <syntax>
    <syntax_item>checkupdate()</syntax_item>
    <syntax_item>checkupdate('url', http_url_to_check)</syntax_item> 
    <syntax_item>checkupdate('forcenogui', true_or_false)</syntax_item> 
    <syntax_item
    >checkupdate('url', http_url_to_check, 'forcenogui', true_or_false)</syntax_item> 
    <syntax_item>checkupdate('forcenogui', true_or_false)</syntax_item> 
    <syntax_item>[res, msg, url_new_version] = checkupdate(...)</syntax_item> 
  </syntax>

  <param_input>

    <param_input_item>
      <param_name>http_url_to_check</param_name>
      <param_description
      >a string: URL to check the latest Nelson's application version.</param_description>
    </param_input_item>

    <param_input_item>
      <param_name>true_or_false</param_name>
      <param_description
      >a logical: true (force CLI), false (detect default mode).</param_description>
    </param_input_item>


  </param_input>

  <param_output>

    <param_output_item>
      <param_name>res</param_name>
      <param_description
      >a logical: result of the update check.</param_description>
    </param_output_item>

    <param_output_item>
      <param_name>msg</param_name>
      <param_description
      >a string: message providing information about the update check.</param_description>
    </param_output_item>

    <param_output_item>
      <param_name>url_new_version</param_name>
      <param_description
      >a string: URL to download the new version if available.</param_description>
    </param_output_item>

  </param_output>

  <description>
    <p><b
      >checkupdate</b> checks if a new version of Nelson is available and opens a URL to download it.</p>
    <p
    >This function is primarily used through the menu action available in the main window's help section.</p>
  </description>
