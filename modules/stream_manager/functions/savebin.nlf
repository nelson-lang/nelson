function ndarraygeneric_save_data(fd, data)
  fwrite(fd, int64(typebin(class(data))), 'int64', 'l');
  dim = size(data);
  len = length(dim);
  fwrite(fd, len, 'double', 'l');
  fwrite(fd, dim, 'double', 'l');

  if ~isempty(data)
    d = reshape(data, 1, []);
    save_data(fd, d);
  end
endfunction 
