function class_save_data(fd, data)
  classname = class(data);
  fwrite(fd, 2000, 'int64', 'l');
  dim = size(data);
  len = length(dim);
  fwrite(fd, len, 'double', 'l');
  fwrite(fd, dim, 'double', 'l');
  function_to_call = [classname,'_save_data'];
  feval(function_save, fd, data);
