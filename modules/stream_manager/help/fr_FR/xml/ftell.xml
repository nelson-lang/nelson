    <language>fr_FR</language>
    <keyword>ftell</keyword>
        <short_description
  >Retourne le décalage de l'octet courant par rapport au début d'un fichier.</short_description>
    <syntax>
        <syntax_item>p = ftell(fid)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>fid</param_name>
            <param_description>un descripteur de fichier</param_description>
        </param_input_item>
    </param_input>
    <param_output>
        <param_output_item>
            <param_name>p</param_name>
        <param_description
      >une valeur entière : position du pointeur de fichier en nombre de caractères depuis le début du fichier.</param_description>
        </param_output_item>
    </param_output>
                <description>
                <p>
                        <b
      >ftell</b> retourne le décalage de l'octet courant par rapport au début du fichier associé au flux nommé fid.</p>
                </description>
        <used_function />
        <bibliography />
        <examples>
            <example_item>
                <example_item_type>nelson</example_item_type>
                <example_item_description />
                <example_item_data
        runnable="cli"
      ><![CDATA[TXT = 'example about ftell.';
fileID = fopen([tempdir(), 'ftell.txt'],'wt');
fprintf(fileID, TXT);
p1 = ftell(fileID)
fseek(fileID, SEEK_CUR, 'bof');
p2 = ftell(fileID)
status = fclose(fileID);]]></example_item_data>
            </example_item>
        </examples>
