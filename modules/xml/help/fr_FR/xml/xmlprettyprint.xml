    <language>fr_FR</language>
    <keyword>xmlprettyprint</keyword>
    <short_description>formate un fichier XML.</short_description>
    <syntax>
        <syntax_item>xmlprettyprint(xml_file)</syntax_item>
    </syntax>
    <param_input>
        <param_input_item>
            <param_name>xml_file</param_name>
            <param_description>un fichier XML valide.</param_description>
        </param_input_item>
        <param_input_item>
            <param_name>format_space</param_name>
            <param_description
      >un bool√©en indiquant s'il faut formater avec des espaces (true) ou non (false).</param_description>
        </param_input_item>
    </param_input>
    <description>
        <p>
            <b
      >xmlprettyprint</b> formate un fichier XML pour qu'il soit lisible par un humain.</p>
        </description>
        <used_function />
        <bibliography />
<examples>
  <example_item>
    <example_item_type>nelson</example_item_type>
    <example_item_description />
    <example_item_data
        runnable="cli"
      ><![CDATA[xml_filename = [modulepath('xml'), '/tests/test_xml.xml'];
if isfile(xml_filename)
    xml_tmp = [tempdir(), 'test_xml.xml'];
    copyfile(xml_filename, xml_tmp);
    xmlprettyprint(xml_tmp, false);
    fileread(xml_tmp)
    xmlprettyprint(xml_tmp, true);
    fileread(xml_tmp)
end]]>
    </example_item_data>
  </example_item>
</examples>        
